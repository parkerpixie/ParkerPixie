    background:#ffffff22; color:white; text-decoration:none; font-weight:800;
    border:1px solid #ffffff55; border-radius:999px; backdrop-filter:saturate(130%) blur(6px);
  }
  .pill.active{ background:white; color:#5b32ff; border-color:white }

  /* Hero block */
  .hero-wrap{ padding: clamp(18px,4vw,42px) 16px 4px }
  .hero{
    max-width:var(--maxw); margin:0 auto; display:grid;
    grid-template-columns: 1.1fr .9fr; gap: clamp(18px,3.5vw,36px);
    background: linear-gradient(180deg, #ffffff, #fbf9ff);
    border:1px solid var(--border); border-radius:24px; box-shadow: var(--shadow);
    padding: clamp(18px,3.2vw,28px);
  }
  @media (max-width: 920px){ .hero{ grid-template-columns:1fr } }
  .hero h1{
    font-size: clamp(26px, 4.2vw, 48px);
    line-height:1.08; margin:.3rem 0 .6rem 0; letter-spacing:.2px;
  }
  .hero p{ color:#4a3f61; margin:.7rem 0 }
  .chips{ display:flex; gap:8px; flex-wrap:wrap; margin:.8rem 0 1rem }
  .chip{
    padding:8px 12px; border:1px solid var(--border); border-radius:999px;
