    .cta-row{display:flex; gap:.6rem; flex-wrap:wrap; margin-top:.75rem}
    .btn{
      display:inline-flex; align-items:center; justify-content:center; gap:.5rem;
      padding:.6rem .9rem; border-radius:999px; text-decoration:none; font-weight:600;
      background:var(--brand); color:white; border:1px solid rgba(255,255,255,.15);
      box-shadow:0 6px 18px rgba(138,93,255,.35);
    }
    .btn:hover{filter:brightness(1.07)}
    .btn.alt{background:transparent; color:var(--brand); border:1px solid var(--brand)}

    /* Section heading */
    .section{
      max-width:var(--max); margin:2rem auto; padding:0 1rem;
    }
    .section h2{margin:0 0 .75rem; font-size:1.5rem}
    .section p.lead{opacity:.95; max-width:68ch}

    /* Gallery grid (tryit-style cards) */
    .grid{
      display:grid; gap:1rem;
      grid-template-columns: repeat( auto-fill, minmax(220px, 1fr) );
    }
    .card{
      background:linear-gradient(180deg, rgba(231,211,217,.96), rgba(231,211,217,.9));
      color:var(--bubble-ink);
      border:1px solid rgba(0,0,0,.06);
      border-radius:calc(var(--round) - .25rem);
      overflow:hidden; display:flex; flex-direction:column;
      box-shadow:var(--shadow);
