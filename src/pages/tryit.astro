  .card.pop{transform:translateY(0);opacity:1}
  .card .img{aspect-ratio:4/3;object-fit:cover;width:100%}
  .card .body{padding:16px 16px 20px}
  .card h3{margin:0 0 8px}
  .card p{margin:0 0 12px;color:var(--muted)}

  /* FEATURE SPLIT */
