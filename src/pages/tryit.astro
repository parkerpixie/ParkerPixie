  @media(min-width:980px){ .feature{grid-template-columns:1.15fr .85fr} }
  .feature img{border-radius:18px;border:1px solid var(--line)}
  .quote{font-size:20px;line-height:1.6;margin:0 0 14px;position:relative}
  .quote::after{content:"";position:absolute;inset:auto 0 -2px 0;height:2px;
    background:linear-gradient(90deg,transparent,var(--neon),transparent)}

  /* BIOS */
