<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Parker‚Äôs One-Year Sobriety Celebration</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&family=Inter:wght@400;500;700&family=Dancing+Script:wght@700&family=Permanent+Marker&family=Special+Elite&display=swap" rel="stylesheet">

  <style>
    :root{
      --bg:#0b0e17;
      --card:#0f1323;
      --ink:#e9e8ff;
      --muted:#a9b0d9;
      --glow:#9e7bff;
      --glow-2:#5cf0d1;
      --accent:#3be1c0;
      --ring: 0 0 0 2px var(--glow-2), 0 0 32px -6px var(--glow);
      --radius:22px;
      --shadow: 0 10px 30px rgba(0,0,0,.35);
    }

    *{box-sizing:border-box}
    html,body{background:var(--bg);color:var(--ink);margin:0;font-family:Inter,system-ui,Segoe UI,Roboto,Helvetica,Arial,sans-serif}
    a{color:var(--accent);text-decoration:none}
    img{max-width:100%;border-radius:16px}

    /* Standard page container */
    .wrap{max-width:1150px;margin:0 auto;padding:28px 20px 80px}

    /* Utility */
    .grid{display:grid;gap:28px}
    .two{grid-template-columns:1.2fr 1fr}
    .two-eq{grid-template-columns:repeat(2,1fr)}
    .three{grid-template-columns:repeat(3,1fr)}
    @media (max-width:980px){.two,.three,.two-eq{grid-template-columns:1fr}}
    .card{
      background:linear-gradient(180deg, rgba(255,255,255,.03), rgba(255,255,255,.00));
      border:1px solid rgba(255,255,255,.08);
      border-radius:var(--radius);
      box-shadow:var(--shadow);
      overflow:hidden
    }
    .pad{padding:22px}
    .title{font:800 56px/1 Poppins,Inter,sans-serif;letter-spacing:.5px}
    .subtitle{color:var(--muted);font-weight:500}
    .h2{font:800 32px/1.2 Poppins,Inter,sans-serif;margin:0 0 14px}
    .h3{font:800 22px/1.2 Poppins,Inter,sans-serif;margin:0 0 10px}
    .muted{color:var(--muted)}
    .center{text-align:center}
    .row{display:flex;gap:14px;flex-wrap:wrap;align-items:center;justify-content:center}
    .btn{
      display:inline-flex;align-items:center;justify-content:center;
      padding:12px 20px;border-radius:999px;font-weight:700;
      border:1.5px solid rgba(255,255,255,.25);
      color:var(--ink);background:rgba(255,255,255,.03);
      box-shadow:0 0 0 0 rgba(0,0,0,0);
      transition:transform .18s ease, box-shadow .18s ease, border-color .18s ease, background .18s ease;
    }
    .btn:hover{transform:translateY(-1px);border-color:rgba(255,255,255,.4);box-shadow:var(--ring)}
    .btn-pill{min-width:170px}

    /* ========== HERO FULL-BLEED VIDEO FRAME ========== */
    .fullbleed-hero{
      position:relative;
      margin-left:calc(50% - 50vw);
      margin-right:calc(50% - 50vw);
      padding: 34px 0 46px;
    }
    .hero-bg{
      position:absolute; inset:0;
      width:100%; height:100%;
      object-fit:cover;
      z-index:0;
      filter:none;
      pointer-events:none;
    }
    @media (prefers-reduced-motion: reduce){
      .hero-bg{display:none}
    }
    .hero-inner{max-width:1150px;margin:0 auto;padding:0 20px}
    .hero-bubble{
      position:relative;
      border-radius:28px;
      border:1px solid rgba(255,255,255,.22);
      background:rgba(15,19,35,.35);
      backdrop-filter: blur(8px) saturate(1.05);
      box-shadow:var(--shadow);
      padding:60px 20px 70px;
      z-index:1;
    }
    .hero-bubble .title{
      font-size:62px;text-align:center;
      text-shadow:0 0 10px rgba(158,123,255,.25)
    }
    .hero-bubble .subtitle{margin-top:10px;text-align:center}
    .hero-bubble .cta{margin-top:22px}

    /* Section 2 ‚Äî Celebration Details */
    .cards.three .card-img{height:210px;object-fit:cover;width:100%}
    .card-video{display:block;width:100%;height:210px;object-fit:cover;background:#000}
    .card-video-fallback{display:none}
    @media (prefers-reduced-motion: reduce){
      .card-video{display:none}
      .card-video-fallback{display:block}
    }
    .cards .quote{margin:14px 0 0;color:var(--muted);font-style:italic}
    .cards .cta{margin:16px 0 6px}

    /* Section 3 ‚Äî Finding My Light */
    .quote-block{
      background:linear-gradient(180deg, rgba(158,123,255,.14), rgba(92,240,209,.10) 60%, rgba(255,255,255,0));
      border:1px solid rgba(255,255,255,.08);
      border-radius:18px;
      padding:18px 22px;
    }

    /* ===== Section 5 ‚Äî Story & Soundtrack (Dual Polaroid image + two cards) ===== */
    .duet-title{display:flex;gap:.5ch;flex-wrap:wrap;align-items:baseline}
    .duet-title .story{
      font-family:"Special Elite", cursive;
      color:#F4EDFF;
      text-shadow:0 1px 0 rgba(0,0,0,.35);
      font-weight:400;
    }
    .duet-title .amp{
      font-weight:800;
      background:linear-gradient(135deg,#f8e7a5 0%,#f1c15a 40%,#ffe9b8 100%);
      -webkit-background-clip:text;background-clip:text;color:transparent;
      text-shadow:0 0 10px rgba(158,123,255,.25);
    }
    .duet-title .soundtrack{
      font-family:"Permanent Marker", cursive;
      color:#FF59D6; /* base neon */
      text-shadow:
        0 0 .12em #FFD1F5,
        0 0 .35em rgba(255,89,214,.95),
        0 0 .75em rgba(158,123,255,.65);
      font-weight:400;
    }

    .duo-grid{display:grid;gap:28px;grid-template-columns:repeat(2,1fr)}
    .duo-img{
      grid-column:1 / -1;
      display:block;
      width:100%;
      height:auto;
      max-width:1110px; /* keep within section width (not full-bleed) */
      margin:0 auto;
      border-radius:0;
      filter:drop-shadow(0 14px 28px rgba(0,0,0,.45));
    }
    @media (max-width:980px){ .duo-grid{grid-template-columns:1fr} }

    /* Section 6 ‚Äî Quote Showcase (animated once) */
    .showcase{
      position:relative;overflow:hidden;border-radius:22px;
      border:1px solid rgba(255,255,255,.08);
      background:
        radial-gradient(600px 220px at 50% 0%, rgba(158,123,255,.12), transparent 60%),
        linear-gradient(180deg, rgba(255,255,255,.02), rgba(255,255,255,0));
      padding:38px 18px;
    }
    .showcase .qwrap{
      max-width:1000px;margin:0 auto;position:relative;
      padding:18px 16px;border-radius:18px;
      background:linear-gradient(180deg, rgba(0,0,0,.12), rgba(255,255,255,.03));
      border:1px solid rgba(255,255,255,.08);
      backdrop-filter: blur(6px);
    }
    .qtext{
      font-family:"Dancing Script", cursive;
      font-size:38px;line-height:1.25;text-align:center;
      white-space:normal;
      margin:0 auto;color:#f4edff;
      text-shadow:0 2px 12px rgba(158,123,255,.35);
      animation:slideQuote 16s linear 1 both;
    }
    .qattrib{margin-top:10px;text-align:center;color:var(--muted);font-weight:600}
    @keyframes slideQuote{ 0%{transform:translateX(6%)} 100%{transform:translateX(-6%)} }
    @media (max-width:700px){ .qtext{animation:none} }
    @media (prefers-reduced-motion: reduce){ .qtext{animation:none} }

    /* Section 7 ‚Äî Map */
    .map-embed{position:relative;overflow:hidden;border-radius:20px;border:1px solid rgba(255,255,255,.08)}
    .map-embed iframe{display:block;width:100%;height:380px;border:0}

    footer{margin-top:50px;color:var(--muted);text-align:center;font-size:14px}
  </style>
</head>
<body>

