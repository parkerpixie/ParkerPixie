<script>
  // Intersection reveal + dots
  const chapters=[...document.querySelectorAll('section.chapter')];
  const dots=[...document.querySelectorAll('.dot')];
  const io=new IntersectionObserver((ents)=>{
    ents.forEach(e=>{
      if(e.isIntersecting){ e.target.classList.add('reveal');
        const i=chapters.indexOf(e.target);
        if(i>-1){ dots.forEach(d=>d.classList.remove('active')); dots[i].classList.add('active'); }
      }
    });
  },{threshold:.45});
  chapters.forEach(c=>io.observe(c));

  // Parallax tilt on mouse move
  const wraps=[...document.querySelectorAll('.photoWrap[data-tilt]')];
  wraps.forEach(w=>{
    w.addEventListener('mousemove', (ev)=>{
      const r=w.getBoundingClientRect();
      const x=((ev.clientX - r.left)/r.width - .5)*8; // tilt range
      const y=((ev.clientY - r.top)/r.height - .5)*-8;
      w.style.transform=`rotateY(${x}deg) rotateX(${y}deg)`;
    });
    w.addEventListener('mouseleave', ()=> w.style.transform='rotateY(0) rotateX(0)');
  });

  // Mobile Notes toggle
  document.querySelectorAll('.notesBtn').forEach(btn=>{
    btn.addEventListener('click', ()=>{
      const id=btn.getAttribute('data-for');
      const rails=document.getElementById('rails-'+id) || document.getElementById('rails-cover');
      rails.classList.toggle('collapsed');
    });
  });
</script>
