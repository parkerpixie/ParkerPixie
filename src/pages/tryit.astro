  /* Top nav */
  .site-header{
    position:sticky; top:0; z-index:50;
    background:linear-gradient(180deg, #8d6bff, #7a63ff 60%, #6b59ff);
    color:white;
    border-bottom:1px solid #00000010;
  }
  .nav-inner{
    max-width:var(--maxw); margin:0 auto; padding:12px 16px;
