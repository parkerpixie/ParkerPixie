      display:grid; grid-template-columns: 140px 1fr; gap:1rem; align-items:center;
    }
    .pfp{
      width:140px; height:140px; border-radius:50%;
      background:var(--bubble); color:var(--bubble-ink);
      display:grid; place-items:center; overflow:hidden; box-shadow:var(--shadow);
      border:3px solid rgba(231,211,217,.65);
    }
    .pfp img{width:100%; height:100%; object-fit:cover}
    .h-text h1{margin:.1rem 0 .4rem; font-size:1.9rem}
    .pillrow{display:flex; gap:.5rem; flex-wrap:wrap}
    .pill{
      background: var(--bubble);
      color: var(--bubble-ink);
      padding:.4rem .7rem; border-radius:999px; font-size:.85rem;
      border:1px solid rgba(0,0,0,.06);
    }

    /* About bubble */
    .about{
      max-width:var(--max); margin:0 auto; padding:0 1rem 1.5rem;
    }
    .bubble{
      background:linear-gradient(180deg, rgba(231,211,217,.92), rgba(231,211,217,.88));
      color:var(--bubble-ink);
      border:1px solid rgba(0,0,0,.06);
      border-radius:var(--round);
      box-shadow:var(--shadow);
      padding:1rem;
