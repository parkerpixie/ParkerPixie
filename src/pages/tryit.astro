<script>
  // ===== Simple client-side password gate (use Wix Page Password for real security) =====
  (function(){
    const form = document.getElementById('pwForm');
    const input = document.getElementById('pw');
    const gate  = document.getElementById('gate');
    form.addEventListener('submit', function(e){
      e.preventDefault();
      if ((input.value || "").trim() === "CapybaraCalm") {
        gate.style.display = 'none';
        observeCards();
      } else {
        input.value = "";
        input.placeholder = "Try again ‚ú®";
      }
    });
  })();

  // ===== Pop-in animation on scroll (cards) =====
  function observeCards(){
    const cards = document.querySelectorAll('.card');
    if (!('IntersectionObserver' in window)){ cards.forEach(c=>c.classList.add('pop')); return; }
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(({isIntersecting,target})=>{
        if(isIntersecting){ target.classList.add('pop'); io.unobserve(target); }
      });
    },{threshold:.25});
    cards.forEach(c=>io.observe(c));
  }
</script>
