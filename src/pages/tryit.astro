    .ql{padding:1rem; border-left:4px solid var(--brand);}

    /* FAQ */
    details{
      background:linear-gradient(180deg, rgba(231,211,217,.96), rgba(231,211,217,.9));
      color:var(--bubble-ink);
      border:1px solid rgba(0,0,0,.06);
      border-radius:calc(var(--round) - .25rem);
      box-shadow:var(--shadow);
      padding:1rem; margin-bottom:.75rem;
    }
    details > summary{cursor:pointer; font-weight:700}
    details[open]{outline:2px solid rgba(138,93,255,.25)}
    details p{margin:.6rem 0 0}

    /* Footer */
    footer{
      max-width:var(--max); margin:2.5rem auto 3rem; padding:0 1rem;
      opacity:.85; font-size:.95rem
    }

    /* Small screens */
