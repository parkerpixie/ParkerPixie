      padding:0.85rem 1.25rem; border-radius:9999px;
      box-shadow:0 6px 18px rgba(0,0,0,0.25);
      transition:.15s ease-in-out;
    }
    .cta:hover{ opacity:.95; transform:translateY(-1px) }

    /* Filter bubbles (always visible, toggle active) */
    .filters{
      max-width:1100px; margin:0 auto; padding:0 1.5rem 0.5rem;
      display:flex; flex-wrap:wrap; gap:.5rem;
    }
    .filter-btn{
      border:0; cursor:pointer; font-weight:700;
      background:var(--bg-bubble); color:var(--brand-deep);
      padding:.55rem 1rem; border-radius:9999px; transition:.2s;
    }
    .filter-btn:hover{ background:var(--brand); color:#fff }
    .filter-btn.active{ background:var(--brand); color:#fff; transform:scale(1.05) }

    /* Scroller shell */
    .scroller-wrap{
      position:relative; max-width:1100px; margin:1rem auto 2.25rem; padding:0 2.75rem; /* room for arrows */
    }
    .scroller{
      display:grid;
      grid-auto-flow:column;
      grid-auto-columns:minmax(260px,320px); /* card width range */
      gap:1.25rem;
      overflow-x:auto;
      scroll-snap-type:x mandatory;
      padding:1rem .5rem 1.25rem;
      scrollbar-width:thin;
    }
    .scroller::-webkit-scrollbar{ height:10px }
    .scroller::-webkit-scrollbar-thumb{ background:rgba(0,0,0,.25); border-radius:999px }

    /* Card */
    .card{
      background:var(--bg-card); border-radius:1rem;
      box-shadow:0 10px 24px rgba(0,0,0,.25);
      display:flex; flex-direction:column; scroll-snap-align:start;
      transition:opacity .35s ease, transform .35s ease;
      opacity:1; transform:scale(1);
      overflow:hidden;
    }
    .card.hide{ opacity:0; transform:scale(.95); pointer-events:none }
    .card img{
      width:100%; aspect-ratio:1/1; object-fit:contain; background:#fff; display:block;
    }
    .card-body{ padding:1rem 1rem 1.1rem; display:flex; flex-direction:column; gap:.4rem; min-height:160px }
    .card-body h3{ margin:0; font-size:1.1rem; color:var(--brand-deep) }
    .card-body p{ margin:0; color:var(--muted); font-size:.95rem; flex:1 }
    .save-btn{
      align-self:flex-start; text-decoration:none; font-weight:700;
      background:var(--brand); color:#fff; padding:.55rem 1rem; border-radius:9999px;
    }

    /* Arrows */
    .arrow{
      position:absolute; top:50%; translate:0 -50%;
      width:42px; height:42px; border-radius:50%;
      display:grid; place-items:center; border:0; cursor:pointer;
      background:var(--glass); backdrop-filter:blur(8px);
      box-shadow:0 6px 16px rgba(0,0,0,.25);
      color:#222;
    }
    .arrow:hover{ background:#fff }
    .prev{ left:.75rem } .next{ right:.75rem }

    footer{ text-align:center; color:#fff; text-shadow:0 2px 4px rgba(0,0,0,.6); padding:2rem 1rem }
  </style>
