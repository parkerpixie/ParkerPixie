    <!-- Scroll reveal (tiny, safe) -->
    <script type="module">
      const items = document.querySelectorAll('.drop-card, .masonry img, .faq details');
      const io = new IntersectionObserver((ents)=>ents.forEach(e=>{
        if(e.isIntersecting){ e.target.classList.add('reveal'); io.unobserve(e.target); }
      }), {threshold:.12});
      items.forEach(i=>{ i.style.opacity=0; i.style.transform='translateY(14px)'; io.observe(i); });
