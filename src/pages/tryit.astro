  <script>
    // SECTION 6: Stop the quote animation after one pass (desktop / when motion allowed)
    (function(){
      const el = document.getElementById('qtext');
      if(!el) return;

      const reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
      const small = window.matchMedia('(max-width: 700px)').matches;

      if (reduce || small) { el.style.animation = 'none'; return; }

      function stopOnce(){
        el.style.animation = 'none';
        el.removeEventListener('animationend', stopOnce);
      }
      el.addEventListener('animationend', stopOnce, { once:true });
    })();
  </script>
