  .hero-portrait{
    background:linear-gradient(180deg,#ffffff,#f7f3ff);
    border:1px solid var(--border); border-radius:20px; box-shadow: var(--shadow);
    padding: clamp(10px,1.6vw,14px); display:grid; place-items:center;
  }
  .hero-portrait img{
    max-width:100%; height:auto; border-radius:14px; display:block;
  }

  /* Alternating entries */
  section.entry{ padding: clamp(18px,4vw,48px) 16px; display:flex; justify-content:center }
  .row{
    width:100%; max-width:var(--maxw);
    display:grid; grid-template-columns: 1.05fr 1fr; gap: clamp(16px,3vw,40px); align-items:center;
  }
  .row.reverse{ grid-template-columns: 1fr 1.05fr }
  @media (max-width: 860px){ .row, .row.reverse{ grid-template-columns: 1fr } }

  .media{
    background: linear-gradient(180deg,#fff,#fbf9ff);
    border:1px solid var(--border); border-radius:22px; box-shadow: var(--shadow);
    padding: clamp(8px,1.5vw,12px); display:grid; place-items:center;
  }
  .media img{
    max-width:100%; max-height:70svh; height:auto; width:auto; object-fit:contain;
    border-radius:16px; border:1px solid var(--border);
    box-shadow: 0 10px 26px rgba(0,0,0,.10);
  }

  .copy{
    background: linear-gradient(180deg,#fff,#fbf9ff);
    border:1px solid var(--border); border-radius:22px; box-shadow: var(--shadow);
    padding: clamp(16px,2.6vw,28px);
  }
  .kicker{ color:#6a4cff; font-weight:900; letter-spacing:.35px; text-transform:uppercase; font-size:.9rem; margin:0 0 4px 0 }
  h2{ margin:.15rem 0 .8rem 0; font-size:clamp(20px,2.6vw,30px); font-weight:900; letter-spacing:.2px }
  p{ margin:.6rem 0; color:#3b3153 }
  em{ color:#5b32ff; font-style:italic }
  .caption{ margin-top:.8rem; padding-top:.6rem; border-top:1px dashed var(--border); color:#6a5d86; font-size:.95rem }

  /* Thread divider */
  .thread{
    width:100%; max-width:var(--maxw);
    height:38px; margin:4px auto 0;
    background:
      radial-gradient(6px 6px at 20% 50%, var(--gold) 35%, transparent 36%),
      repeating-linear-gradient(90deg, transparent 0 28px, rgba(216,170,59,.35) 28px 32px, transparent 32px 64px);
    opacity:.35; filter: blur(.3px);
  }

  /* Reveal-in */
  .reveal-up{ opacity:0; transform: translateY(18px); transition: opacity .6s ease, transform .6s cubic-bezier(.2,.8,.2,1) }
  .reveal-up.on{ opacity:1; transform: translateY(0) }
  @media (prefers-reduced-motion: reduce){ .reveal-up{ opacity:1; transform:none; transition:none } }
</style>
</head>
