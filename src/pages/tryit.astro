<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>ParkerPixiePaws — The Stitchbook</title>
  <meta name="description" content="A scrollable storybook of ParkerPixiePaws amigurumi — each chapter reveals a creature and the healing, process, and materials behind it." />
  <link rel="icon" href="/CapyGoldIcon.png" />
  <style>
    :root{
      --bg:#0f0b14;        /* deep cosmos */
      --ink:#f6f1ff;       /* soft lilac-white */
      --muted:#c9bfe6;
      --bubble:#fff7e6;    /* cream puff */
      --line:#d8aa3b;      /* Parker gold */
      --card:#1a1424;
      --shadow:0 12px 30px rgba(0,0,0,.25);
    }
    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;
      color:var(--ink);
      background:
        radial-gradient(1200px 800px at 20% -10%, #1b1530 0%, transparent 60%),
        radial-gradient(1000px 700px at 80% 110%, #24183a 0%, transparent 60%),
        var(--bg);
      font-family: ui-rounded, "SF Pro Rounded", Quicksand, Avenir, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, sans-serif;
      line-height:1.5;
      scroll-snap-type:y mandatory;
      overflow-y: auto;
    }

    /* Section = one full-screen chapter */
    section.chapter{
      scroll-snap-align:start;
      min-height:100svh;
      display:grid;
      place-items:center;
      padding:clamp(16px, 3vw, 32px);
      position:relative;
      isolation:isolate;
    }

    .frame{
      width:min(100%, 1100px);
      height:min(82svh, 820px);
      background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(0,0,0,.2));
      border:1px solid rgba(255,255,255,.08);
      border-radius:24px;
      box-shadow:var(--shadow);
      display:grid;
      grid-template-rows:auto 1fr;
      overflow:hidden;
      position:relative;
    }

    header.hero{
      display:flex; align-items:center; gap:12px;
      padding:14px 18px;
      background:linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,0));
      border-bottom:1px solid rgba(255,255,255,.06);
    }
    header.hero .title{
      font-size:clamp(18px, 2.6vw, 28px);
      font-weight:700;
      letter-spacing:.5px;
    }
    header.hero .sub{
      margin-left:auto;
      font-size:clamp(12px,1.4vw,14px);
      color:var(--muted);
      opacity:.9;
    }

    .stage{
      position:relative;
      display:grid;
      place-items:center;
      padding: clamp(12px, 2vw, 24px);
      overflow:hidden;
    }

    .creature{
      width: min(92%, 520px);
      max-height: 70svh;
      object-fit: cover;
      border-radius: 18px;
      border: 2px solid rgba(255,255,255,.12);
      box-shadow: var(--shadow);
      transform: translateY(14px) scale(.985);
      opacity:.001;
      transition: transform .8s cubic-bezier(.2,.8,.2,1), opacity .8s ease;
      will-change: transform, opacity;
    }
    .reveal .creature{
      transform: translateY(0) scale(1);
      opacity:1;
    }

    /* Pop-up bubbles */
    .bubble{
      position:absolute;
      max-width:min(86vw, 380px);
      background: var(--bubble);
      color:#2c2c2c;
      border:2px solid var(--line);
      border-radius:16px;
      padding:14px 16px;
      box-shadow: 0 8px 20px rgba(0,0,0,.18);
      opacity:0; transform: translateY(16px) scale(.98);
      transition: opacity .7s ease, transform .7s cubic-bezier(.2,.8,.2,1);
      font-size:clamp(14px, 1.9vw, 16px);
      line-height:1.45;
    }
    .bubble small{display:block;color:#5a4b22;opacity:.85;margin-top:6px}

    /* Positions per-chapter; they adapt on small screens */
    .b1{ top: clamp(10px, 8svh, 80px); left: clamp(8px, 5vw, 60px); }
    .b2{ bottom: clamp(60px, 10svh, 120px); right: clamp(8px, 6vw, 80px); }
    .b3{ bottom: clamp(12px, 4svh, 40px); left: clamp(16px, 10vw, 120px); }

    .reveal .bubble{ opacity:1; transform: translateY(0) scale(1); }
    .reveal .b2{ transition-delay: .12s; }
    .reveal .b3{ transition-delay: .22s; }

    /* Yarn thread divider between chapters */
    .thread{
      position:absolute; inset:auto 0 -20px 0;
      height: 40px;
      background:
        radial-gradient(6px 6px at 20% 50%, var(--line) 35%, transparent 36%),
        repeating-linear-gradient(90deg, transparent 0 28px, rgba(216,170,59,.35) 28px 32px, transparent 32px 64px);
      opacity:.35;
      filter: blur(.3px);
      pointer-events:none;
    }

    /* Cover + Footer */
    .cover, .outro{
      text-align:center;
      display:grid; place-items:center;
    }
    .brand{
      font-size: clamp(22px, 4.2vw, 44px);
      font-weight: 800;
      letter-spacing: .6px;
      margin-bottom: 6px;
    }
    .tag{
      color:var(--muted);
      font-size:clamp(14px, 2vw, 18px);
    }
    .cta{
      margin-top:16px;
      display:inline-block;
      padding:10px 14px;
      border-radius:999px;
      border:1px solid rgba(255,255,255,.25);
      color:var(--ink);
      text-decoration:none;
      font-weight:600;
      background:linear-gradient(180deg, rgba(255,255,255,.08), rgba(255,255,255,0));
    }
    .cta:hover{ border-color: rgba(255,255,255,.5); }

    /* Motion sensitivity */
    @media (prefers-reduced-motion: reduce){
      .creature, .bubble{ transition:none }
      .thread{ display:none }
    }

    /* Small tweaks for very short heights */
    @media (max-height:600px){
      .bubble{ font-size:14px }
    }
  </style>
</head>
<body>

  <!-- Cover Page -->
  <section class="chapter cover" aria-label="Cover">
    <div class="frame reveal" style="background:linear-gradient(180deg, rgba(255,255,255,.06), rgba(0,0,0,.25));">
      <header class="hero">
        <div class="title brand">The Stitchbook of ParkerPixiePaws</div>
        <div class="sub">Sass · Shimmer · Sparkle · Soothing Stitches</div>
      </header>
      <div class="stage">
        <p class="tag">A gentle, scrollable storybook. Meet each creature. Read the making. Feel the mending.</p>
        <a class="cta" href="#aurora">Begin the wander ↓</a>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Chapter: Aurora (PUFFIN) -->
  <section class="chapter" id="aurora" aria-labelledby="h-aurora">
    <div class="frame">
      <header class="hero">
        <div class="title" id="h-aurora">Aurora the Puffin</div>
        <div class="sub">calm · feather details · ocean daydream</div>
      </header>
      <div class="stage">
        <img class="creature" src="/img/Aurora.jpg" alt="Aurora the puffin plush" />
        <!-- Replace with your blog description for Aurora -->
        <div class="bubble b1">“Bonjour — I’m Aurora, stitched with extra puff and extra love.”<small>Creature voice</small></div>
        <div class="bubble b2">I made Aurora during a week I needed softness. Every feather detail slowed my breath and found me a steadier rhythm.<small>Reflection / healing</small></div>
        <div class="bubble b3">Yarn & notes: Bernat Blanket; ~12 hrs; detachable beak detail; satin stitch eyes.<small>Process bits</small></div>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Chapter: Bejeweled (PEACOCK) -->
  <section class="chapter" id="bejeweled" aria-labelledby="h-bejeweled">
    <div class="frame">
      <header class="hero">
        <div class="title" id="h-bejeweled">Bejeweled the Peacock</div>
        <div class="sub">centerpiece · sparkle · showstopper</div>
      </header>
      <div class="stage">
        <img class="creature" src="/img/Bejeweled.jpg" alt="Bejeweled the peacock plush with jeweled tail" />
        <!-- Replace with your blog copy for Bejeweled -->
        <div class="bubble b1">“I can still make the whole place shimmer.”<small>Creature voice</small></div>
        <div class="bubble b2">Bejeweled taught me patience layer by layer. Tail-feather assembly became a meditation on attention and pride.<small>Reflection / healing</small></div>
        <div class="bubble b3">Materials: bulky velvet + felt jewels; wired tail base; blocking overnight for drape.<small>Process bits</small></div>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Chapter: Bonnie (CHICKEN) -->
  <section class="chapter" id="bonnie" aria-labelledby="h-bonnie">
    <div class="frame">
      <header class="hero">
        <div class="title" id="h-bonnie">Bonnie the Chicken</div>
        <div class="sub">comfort · farmhouse cozy · comic relief</div>
      </header>
      <div class="stage">
        <img class="creature" src="/img/Bonnie.jpg" alt="Bonnie the chicken plush" />
        <!-- Replace with your blog copy for Bonnie -->
        <div class="bubble b1">“Bok-bok bestie. I bring breakfast energy and zero judgment.”<small>Creature voice</small></div>
        <div class="bubble b2">Bonnie is pure comfort crafting: repetitive stitches, soft round shapes, and silly joy when her comb went on just right.<small>Reflection / healing</small></div>
        <div class="bubble b3">Notes: chenille yarn; safety eyes; poly fill packed firm for cartoon roundness.<small>Process bits</small></div>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Chapter: Gilligan (PELICAN) -->
  <section class="chapter" id="gilligan" aria-labelledby="h-gilligan">
    <div class="frame">
      <header class="hero">
        <div class="title" id="h-gilligan">Gilligan the Pelican</div>
        <div class="sub">seaside whimsy · oversized beak · explorer</div>
      </header>
      <div class="stage">
        <img class="creature" src="/img/Gilligan.jpg" alt="Gilligan the pelican plush" />
        <!-- Replace with your blog copy for Gilligan -->
        <div class="bubble b1">“Need a ride for your worries? Into the beak they go.”<small>Creature voice</small></div>
        <div class="bubble b2">Shaping the beak pocket was fiddly-but-worth-it work — the kind that occupies hands and quiets thoughts.<small>Reflection / healing</small></div>
        <div class="bubble b3">Tech: short rows + firm edge sc for structure; light wire at brim; matte embroidery for charm.<small>Process bits</small></div>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Chapter: Jade (SUCCULENT PLANTER) -->
  <section class="chapter" id="jade" aria-labelledby="h-jade">
    <div class="frame">
      <header class="hero">
        <div class="title" id="h-jade">Jade the Succulent Planter</div>
        <div class="sub">steadfast · patience · roots & growth</div>
      </header>
      <div class="stage">
        <img class="creature" src="/img/Jade.jpg" alt="Jade the succulent planter amigurumi" />
        <!-- Replace with your blog copy for Jade -->
        <div class="bubble b1">“Quiet soil. Wild bloom. We grow here.”<small>Piece voice</small></div>
        <div class="bubble b2">For Blake — a reminder that steady love lets the bright parts flourish, even on hard days.<small>Story / healing</small></div>
        <div class="bubble b3">Planter form; tidy gauge for crisp leaves; cool, calming palette.<small>Process bits</small></div>
      </div>
      <div class="thread" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Outro -->
  <section class="chapter outro" aria-label="Outro">
    <div class="frame reveal">
      <header class="hero">
        <div class="title">Thanks for wandering through my stitches</div>
        <div class="sub">every creature a chapter · every chapter a little healing</div>
      </header>
      <div class="stage">
        <p class="tag">If one of these pals speaks to you, I take limited commissions.</p>
        <a class="cta" href="/parkerpixiepaws/request/">Inquire about a custom</a>
      </div>
    </div>
  </section>

  <script>
    // Reveal-on-view to trigger the image + bubbles animation
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting) e.target.classList.add('reveal');
      });
    }, { threshold: 0.3 });

    document.querySelectorAll('.frame').forEach(el=>io.observe(el));
  </script>
</body>
</html>
