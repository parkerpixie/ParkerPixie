  .cta-row{ display:flex; gap:12px; flex-wrap:wrap; margin-top:.6rem }
  .btn{
    display:inline-flex; align-items:center; gap:10px; text-decoration:none; font-weight:900;
    padding:12px 16px; border-radius:12px; border:1px solid #d9ccff;
    background:linear-gradient(180deg,#7f66ff,#6c59ff); color:white; box-shadow:0 10px 26px rgba(100,80,255,.25);
