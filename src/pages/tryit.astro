  .bio img{width:96px;height:96px;border-radius:14px;object-fit:cover}
  .note{color:var(--muted)} iframe{border:0;width:100%}
  footer{border-top:1px solid var(--line);margin-top:48px}
  .links a:hover{text-decoration:underline}

  /* ANIMATIONS */
