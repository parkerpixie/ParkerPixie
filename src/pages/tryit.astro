  html,body {margin:0;padding:0;background:var(--bg);color:var(--ink);font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,Helvetica,Arial,sans-serif;}
  a.button {display:inline-block;padding:12px 18px;border:1px solid var(--ink);border-radius:999px;text-decoration:none;color:var(--ink);transition:transform .12s ease, box-shadow .12s ease;}
