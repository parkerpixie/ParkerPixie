<script>
  // Pop-in animation on scroll (no password gate)
  const cards = document.querySelectorAll('.card');
  if (!('IntersectionObserver' in window)){ cards.forEach(c=>c.classList.add('pop')); }
  else{
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(({isIntersecting,target})=>{
        if(isIntersecting){ target.classList.add('pop'); io.unobserve(target); }
      });
    },{threshold:.25});
    cards.forEach(c=>io.observe(c));
  }
</script>
