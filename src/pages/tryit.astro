  .hero p {margin:0 0 24px;color:var(--muted)}
  .stack {display:grid;gap:32px;}
  .grid {display:grid;gap:24px;grid-template-columns:repeat(12,1fr);}
  .card {grid-column: span 12;background:#141425;border:1px solid #24243a;border-radius:18px;overflow:hidden;}
  .card .img {aspect-ratio: 4/3; background:#0f0f1f; display:block; width:100%; object-fit:cover;}
  .card .body {padding:18px 18px 22px;}
  .card h3 {margin:0 0 8px;font-size:20px}
  .card p {margin:0 0 12px;color:var(--muted)}
  @media (min-width:800px){ .card {grid-column: span 4;} }
  .feature {display:grid;gap:24px;align-items:center;}
  .feature img {width:100%;border-radius:18px;display:block}
  @media (min-width:900px){
    .feature {grid-template-columns:1.1fr .9fr;}
  }
  .bios {display:grid;gap:24px;}
  .bio {display:grid;grid-template-columns:96px 1fr;gap:16px;align-items:center;background:#141425;border:1px solid #24243a;border-radius:18px;padding:16px;}
  .bio img {width:96px;height:96px;object-fit:cover;border-radius:14px;}
  @media (min-width:780px){ .bios {grid-template-columns:1fr 1fr;} }
  .section-title {font-size:28px;margin:0 0 14px}
  iframe {border:0;width:100%;}
  .note {color:var(--muted);font-size:14px}
  footer {border-top:1px solid #24243a;margin-top:48px}
  .links a {color:var(--accent);text-decoration:none}
