  <script>
    // Filter logic (keeps bubbles visible, animates cards)
    const filterButtons = document.querySelectorAll(".filter-btn");
    const cards = Array.from(document.querySelectorAll(".card"));
    const scroller = document.getElementById("pins-scroller");

    function applyFilter(filter){
      cards.forEach(card=>{
        const match = filter === "all" || card.dataset.category === filter;
        card.classList.toggle("hide", !match);
      });
      // snap to first visible card
      const firstVisible = cards.find(c => !c.classList.contains("hide"));
      if(firstVisible){ firstVisible.scrollIntoView({behavior:"smooth", inline:"start", block:"nearest"}); }
    }

    filterButtons.forEach(btn=>{
      btn.addEventListener("click", ()=>{
        filterButtons.forEach(b=>b.classList.remove("active"));
        btn.classList.add("active");
        applyFilter(btn.getAttribute("data-filter"));
      });
    });

    // Arrow scrolling
    const prev = document.querySelector(".prev");
    const next = document.querySelector(".next");
    function scrollByOne(){
      const card = cards.find(c=>!c.classList.contains("hide"));
      const width = card ? card.getBoundingClientRect().width + 20 : 320;
      return width;
    }
    prev.addEventListener("click", ()=> scroller.scrollBy({left: -scrollByOne(), behavior:"smooth"}));
    next.addEventListener("click", ()=> scroller.scrollBy({left:  scrollByOne(), behavior:"smooth"}));

    // Keyboard support for scroller
    scroller.addEventListener("keydown", (e)=>{
      if(e.key === "ArrowRight") { scroller.scrollBy({left:  scrollByOne(), behavior:"smooth"}); }
      if(e.key === "ArrowLeft")  { scroller.scrollBy({left: -scrollByOne(), behavior:"smooth"}); }
    });
  </script>
