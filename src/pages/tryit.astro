    :root{
      --brand:#8a5dff; 
      --brand-deep:#4b2fb5;
      --ink:#f7f3ff; 
      --muted:#c9c2dd;
      --bg1:#0f0b14; 
      --bg2:#130e1f; 
      --bg3:#100b1a;
      --gold:#D8AA3B;
      --bubble:#e7d3d9; /* mauve */
      --bubble-ink:#2b1f26;
      --max:1100px;
