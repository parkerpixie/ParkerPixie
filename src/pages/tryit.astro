      letter-spacing:.2px;
      background-attachment: fixed;
    }

    a{color:var(--gold); text-decoration:none}
    a:hover{text-decoration:underline}

    /* Header / Banner */
    .banner{
      position:sticky; top:0; z-index:50;
      backdrop-filter: blur(8px);
