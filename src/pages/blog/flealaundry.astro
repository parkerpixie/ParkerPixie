---
// src/pages/blog/flealaundry.astro
const title = "Fleas, Laundry, and the Universe’s Sense of Humor";
const subtitle = "Or: That time my dog, my washer, and my nervous system all tapped out at once.";
const date = "December 11, 2025";
const tags = ["life", "pets", "ADHD", "home"];

/* Image lives at /public/img/flealaundry.png */
const cover = "/img/flealaundry.png";
const coverAbs = "https://parkerpixie.netlify.app/img/flealaundry.png";

/* ✅ Absolute URL for this page (under /blog/) */
const pageUrl = "https://parkerpixie.netlify.app/blog/flealaundry/";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} • ParkerPixie Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="One long work day, one matted dog, surprise fleas, an overloaded washer, and an ADHD brain just trying to go play video games in peace."
    />
    <link rel="icon" href="/CapyGoldIcon.png" />

    <!-- ✅ Absolute canonical under /blog/ -->
    <link rel="canonical" href={pageUrl} />

    <!-- ✅ Social preview (absolute URLs) -->
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="ParkerPixie" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={title + " • ParkerPixie Blog"} />
    <meta property="og:description" content={subtitle} />
    <meta property="og:image" content={coverAbs} />
    <meta property="og:image:alt" content="Flea fight and laundry chaos illustration" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={subtitle} />
    <meta name="twitter:image" content={coverAbs} />

    <style>
      :root{
        --brand:#8a5dff; --brand-deep:#5a39d9;
        --ink:#f6f1ff; --muted:#cfc7e6;
        --bg:#0e0a16; --card:#151025f2;
        --gold:#f2c98b; --glow:0 0 30px rgba(138,93,255,.35);
        --radius:18px;
      }
      *{box-sizing:border-box}
      html,body{
        margin:0; padding:0; line-height:1.6; color:var(--ink);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, "Apple Color Emoji","Segoe UI Emoji";
        background:
          radial-gradient(1200px 800px at 10% -10%, rgba(138,93,255,.16), transparent 60%),
          radial-gradient(900px 600px at 90% 0%, rgba(255,214,232,.14), transparent 58%),
          url('/bg/cotton-candy.jpg') center/cover no-repeat fixed,
          var(--bg);
      }
      a{ color:var(--gold); text-decoration:none }
      a:hover{ text-decoration:underline }
      .wrap{max-width:1080px; margin:0 auto; padding:0 20px}
      header.site{
        position:sticky; top:0; z-index:50;
        backdrop-filter: blur(10px);
        background: linear-gradient(to bottom, rgba(15,11,20,.86), rgba(15,11,20,.55));
        border-bottom:1px solid rgba(255,255,255,.08);
      }
      .nav{display:flex; align-items:center; justify-content:space-between; gap:16px; padding:12px 0}
      .brand{display:flex; align-items:center; gap:12px; font-weight:800; letter-spacing:.3px}
      .brand img{width:28px; height:28px; filter:drop-shadow(0 0 8px rgba(242,201,139,.45))}
      .brand span{font-size:18px; color:var(--gold)}
      .nav-right{display:flex; align-items:center; gap:14px}
      .nav-link{
        padding:.55rem .2rem; border-radius:8px; opacity:.92;
        transition:opacity .15s ease, color .15s ease, background .15s ease;
        color:#fff; text-decoration:none;
      }
      .nav-link:hover{opacity:1; color:var(--gold)}
      .nav-btn{
        padding:.6rem .9rem; border-radius:999px; font-weight:600;
        border:1px solid rgba(255,255,255,.18);
        background:linear-gradient(135deg,var(--brand),var(--brand-deep));
        box-shadow:0 8px 24px rgba(90,57,217,.35);
        color:#fff; text-decoration:none;
      }
      .nav-btn:hover{filter:brightness(1.06)}
      @media (max-width:900px){
        .nav-right{gap:10px}
        .nav-link{padding:.5rem .1rem}
      }
      .shell{ max-width:820px; margin:40px auto 100px; padding:0 20px }
      header.post{
        background: linear-gradient(180deg, rgba(138,93,255,.18), transparent 55%), var(--card);
        border:1px solid rgba(255,255,255,.10); border-radius:var(--radius);
        box-shadow:var(--glow); padding:28px; position:relative; overflow:hidden;
      }
      .sparkles{
        position:absolute; inset:-2px; pointer-events:none; opacity:.5; filter:blur(.2px);
        background:
          radial-gradient(8px 8px at 20% 30%, rgba(242,201,139,.8), transparent 60%),
          radial-gradient(6px 6px at 70% 20%, rgba(138,93,255,.65), transparent 60%),
          radial-gradient(5px 5px at 85% 65%, rgba(242,201,139,.7), transparent 60%),
          radial-gradient(7px 7px at 35% 80%, rgba(138,93,255,.45), transparent 60%);
      }
      .kicker{ color:var(--muted); letter-spacing:.12em; text-transform:uppercase; font-size:.78rem }
      h1{ font-size:clamp(1.8rem, 4vw, 2.6rem); line-height:1.12; margin:8px 0 6px; color:#fff }
      .sub{ color:#e8e0ff; font-size:clamp(1rem, 2.2vw, 1.15rem); margin:0 0 14px }
      .meta{ display:flex; flex-wrap:wrap; gap:10px; align-items:center; color:var(--muted); font-size:.92rem }
      .tags{ display:flex; gap:8px; flex-wrap:wrap; margin-left:auto }
      .tag{ background:rgba(242,201,139,.12); border:1px solid rgba(242,201,139,.35);
            color:#ffeecf; padding:4px 10px; border-radius:999px; font-size:.78rem }
      .cover{ margin:18px 0 0; border-radius:calc(var(--radius) - 6px); overflow:hidden; border:1px solid rgba(255,255,255,.12) }
      .cover img{ width:100%; display:block }
      .content{
        margin-top:26px; padding:26px; border-radius:var(--radius);
        background: rgba(9,7,15,.55); backdrop-filter: blur(4px);
        border:1px solid rgba(255,255,255,.10);
      }
      .insight{
        display:grid; grid-template-columns:48px 1fr; gap:14px; align-items:center;
        background: linear-gradient(180deg, rgba(242,201,139,.12), rgba(138,93,255,.10));
        border:1px dashed rgba(242,201,139,.45); padding:14px 16px; border-radius:14px; margin:8px 0 22px;
      }
      .insight .badge{
        width:48px; height:48px; border-radius:12px; display:grid; place-items:center;
        background: radial-gradient(circle at 30% 25%, #fff7, transparent 40%), #2a2141;
        color:#ffe8bd; font-weight:700; font-size:.68rem; text-align:center; line-height:1.1;
        border:1px solid rgba(255,255,255,.18);
      }
      .pull{
        font-size:clamp(1.05rem, 2.2vw, 1.25rem);
        color:#fff; background:rgba(138,93,255,.16);
        border-left:3px solid var(--brand); padding:14px 16px; border-radius:12px; margin:20px 0;
      }
      .hr{ height:1px; background:linear-gradient(90deg, transparent, rgba(255,255,255,.22), transparent); margin:22px 0 }
      .mantra{
        display:flex; gap:10px; align-items:center; color:#fff; font-weight:600;
        background:#1c1530; border:1px solid rgba(255,255,255,.14); border-radius:12px; padding:12px 14px; margin-top:18px;
      }
      .mantra .dot{ width:9px; height:9px; border-radius:99px; background:var(--gold); box-shadow:0 0 10px rgba(242,201,139,.9) }
      .foot{ color:var(--muted); font-size:.9rem; display:flex; justify-content:space-between; gap:10px; flex-wrap:wrap; margin-top:18px }
      .share{ display:flex; gap:10px; flex-wrap:wrap }
      .btn{
        padding:7px 12px; border-radius:999px; border:1px solid rgba(255,255,255,.18);
        background:#1b132e; color:#f3ecff; font-size:.85rem; cursor:pointer; text-decoration:none;
        transition: transform .06s ease, border-color .18s ease;
      }
      .btn:hover{ border-color:rgba(242,201,139,.6) }
      .btn:active{ transform: translateY(1px); }
      .sr{ position:absolute; width:1px; height:1px; overflow:hidden; clip:rect(0 0 0 0); white-space:nowrap }
      #toast{
        position: fixed; left: 50%; bottom: 24px; transform: translateX(-50%) translateY(10px);
        background: rgba(28, 21, 48, .95);
        color: #f6f1ff; border: 1px solid rgba(255,255,255,.18);
        padding: 10px 14px; border-radius: 999px; opacity: 0; pointer-events: none;
        transition: opacity .18s ease, transform .18s ease; box-shadow: 0 10px 30px #0007;
        font-size: .92rem;
      }
      #toast.show{ opacity: 1; transform: translateX(-50%) translateY(0); }
    </style>
  </head>
  <body>
    <header class="site">
      <div class="wrap nav">
        <a class="brand" href="/">
          <img src="/CapyGoldIcon.png" alt="ParkerPixie gold capybara icon" />
          <span>ParkerPixie</span>
        </a>
        <nav class="nav-right" aria-label="Primary">
          <a class="nav-link" href="/about/">About</a>
          <a class="nav-link" href="/blog/">Blog</a>
          <a class="nav-btn" href="/contact/">Contact</a>
        </nav>
      </div>
    </header>

    <main class="shell">
      <header class="post">
        <div class="sparkles" aria-hidden="true"></div>
        <div class="kicker">ParkerPixie Blog</div>
        <h1>{title} ✨</h1>
        <p class="sub">{subtitle}</p>
        <div class="meta">
          <span>{date}</span>
          <div class="tags">
            {tags.map((t) => <span class="tag">{t}</span>)}
          </div>
        </div>
        {cover && (
          <figure class="cover">
            <img src={cover} alt="Laundry piles and flea-fighting chaos" loading="eager" />
          </figure>
        )}
      </header>

      <article class="content">
        <section class="insight" role="note" aria-label="Pixie Insight">
          <div class="badge">Pixie<br/>Insight</div>
          <p style="margin:0;">Sometimes the plot twist isn’t deep. It’s just the universe saying, “New side quest unlocked: chaos mode.”</p>
        </section>

        <p>It was a night at the Talbot household, folks.</p>

        <p>
          I wrapped up yet another <em>“why is this my busy season when it’s supposed to be my quiet season?!”</em> day of back-to-back meetings and thought,
          very naively, <strong>tonight… I sleep.</strong>
        </p>

        <p>
          Especially after the previous night’s symphony of Luna licking her matted fur at 2 a.m. like a goddamn percussionist.
          Zero stars. Would not recommend as a sleep soundtrack.
        </p>

        <h2>The Grooming Olympics (Home Edition)</h2>

        <p>
          I’d been putting off taking the dogs to the groomer because life has been aggressively lifey. So I finally said:
          <strong>today is the day I learn how to use clippers and pray for the best.</strong>
        </p>

        <p>
          If she ends up looking feral? Doesn’t matter. She doesn’t leave the house. That’s between her and the Amazon delivery drivers.
        </p>

        <p>
          So I wrestled that dog for almost an hour and hacked off enough mats to knit a small sweater. Honestly? I was proud.
          Tired, covered in dog hair, but proud.
        </p>

        <h2>And Then… the Scratching</h2>

        <p>
          Fast-forward through dinner, Porter’s Taekwondo run, and me finally settling in to play the video game I’d been daydreaming about since 9 a.m…
          and Luna is <em>still</em> scratching.
        </p>

        <p>
          Blake checks.
        </p>

        <p>
          <strong>FLEAS.</strong><br />
          <strong>F&nbsp;L&nbsp;E&nbsp;A&nbsp;S.</strong><br />
          HOW. Just… HOW.
        </p>

        <div class="pull">
          We are indoor people with indoor dogs. I don’t take them to dog parks. We’re not hiking the Appalachian Trail. We go to the <em>yard</em>.
          Apparently the yard is now a nightclub for fleas.
        </div>

        <p>
         My nervous system with ADHD, three rogue brain tabs open, and zero warning, just shrugs and goes, “Yeah, that tracks.”
        </p>

        <h2>New Side Quest: Flea Warfare</h2>

        <p>
          We spring into action. Blake corrals the dogs. I whip off the pajama pants I had just put on, grab my keys, and bolt for Pet Supplies Plus—talking to ChatGPT the entire drive like my own personal flea-control hotline.
        </p>
<h2>The ADHD Brain on Mission Mode</h2>

        <p>
          My ADHD brain does not do “just one thing.” On the drive to the store, it's talking to ChatGPT and running a full playbook:
        </p>

        <ul>
          <li>“What if the fleas are in Porter’s room or just in Luna and Ozzy's orbit?”</li>
          <li>“What's actually effective vs. just expensive when it comes to flea treatments?”</li>
          <li>“How do I handle the weighted blanket situation without self-destructing?”</li>
          <li>“Also, we really do need a new washer-file that under 'very soon, please.' ”</li>
        </ul>

        <p>
          It's not panic so much as crisis logistics: I went from "I'd like to play a cozy video game to calm down" to "I'm consulting my AI brain-friend while I design a pest-control plan and mentally shortlist new appliance."
        </p>

        <p>
          10/10 on hyperfocused problmen-solving energy, still 0/10 on rest.
        </p>
    

        <h2>Meanwhile, in Laundry Hell</h2>
<p>If you find fleas on your dog, every single article on the internet says, "Wash all bedding, blankets, soft things, your hopes, your dreams, your time...."  And Blake is managing homebase by attemping to washing things.  Knowing I was picking up spray that could  save my weighted blanket, which cannot be washed.  Because honesty, "If I had to throw it away we were going to be having a very different kind of mental health crisis on our hands
        <p>
          Blake spots the LE error flashing on the washer from the towels and rug I’d used while grooming Luna. And because we’ve wrangled this demon appliance before, he does the logical thing: assumes it’s an unbalanced load and tosses the dog beds in like he’s offering tribute to a temperamental washing machine god.

The washer fills with more water, thinks about its life choices, and then the motor makes noises that can only be described as, “Absolutely not,” before flashing the error again.

<p>I walk in the door to find Blake standing there, holding dripping laundry like the machine has taken him hostage and is demanding negotiations.</p> 

          <p><h4>And that’s when it hits me: nothing here is getting fixed tonight. We’ve reached <b>peak chaos saturation</b>.</h4></p>
<p>So the mission becomes clear—diffuse the situation, keep everyone calm, and figure out what can be salvaged before the house stages a full mutiny.
        </p>

        <div class="pull">
          The whole time, I’m not spiraling so much as project-managing the crisis: stay calm, solve the next problem, and for the love of of it all, don’t let everyone else in the house panic.
        </div>


        <h2>What I Actually Can Control</h2>

        <p>
          Underneath the fleas and the laundry and the dying washer is this old, familiar feeling:
          <em>if I don’t get everything perfect, I’ve failed my family.</em>
        </p>

        <p>
          That voice always shows up when the universe throws curveballs:
          dog emergencies, appliance breakdowns, surprise expenses, you name it. It whispers that I should have prevented this, anticipated it,
          solved it quietly without bothering anyone.
        </p>

        <p>
          But that’s not how life works, and the only thing I actually get to control is myself-not the washer, not the fleas or the dog, and not the panic starting to rise in my husband.
        </p>

        <div class="pull">
          The truth: being a good mom, partner, and human isn’t about preventing chaos.
          It’s about responding with as much care as you have capacity for, and then <em>letting “good enough” be enough</em>.
        </div>

        <h2>Where We Landed</h2>

        <p>
          By the end of the night:
        </p>

        <ul>
          <li>The dogs were treated and rinsed and deeply unimpressed.</li>
          <li>Wet laundry was draining in Porter's bathrub, and we had enough clean stuff to make it comfortably through the night.</li>
          <li>The washer was unplugged and in time-out, and we were corssing our fingers for a miraculous morning reset.</li>
          <li>I still got to play at least a little bit of my cozy video game, which felt like a tiny, hard-won victory.</li>
        </ul>

        <p>
          But:
        </p>

        <ul>
          <li>We handled Fleas: Round One - dogs treated, beds washed, house sprayed.</li>
<li>We picked out and ordered a new washer that should land before we fully run out of clean clothes.</li>
          <li>There was yelling, sure, but we tag-teamed the chaos and did not, in fact, murder each other, which I'm counting as emotional progress.</li>
          <li>I caught myself before I drowned in shame about things I could not possibly have controlled.  We're managing it. That's enough</li>
        </ul>

        <div class="hr"></div>

        <p class="mantra">
          <span class="dot" aria-hidden="true"></span>
          <span><strong>Mantra:</strong> I don’t have to be in control to be capable. I do the next right thing, one load at a time.</span>
        </p>

        <footer class="foot">
          <div>— Parker</div>
          <nav class="share" aria-label="Share this post">
            <button class="btn" id="copyLinkBtn" type="button">Copy Link</button>
            <a class="btn" id="fbShare" href="#" rel="noopener">Share on Facebook</a>
            <button class="btn" id="nativeShareBtn" type="button" hidden>Share…</button>
            <a class="btn" href="/blog/">Back to Blog</a>
          </nav>
        </footer>
      </article>
    </main>

    <div id="toast" role="status" aria-live="polite" aria-atomic="true">Link copied ✨</div>

    <script type="module">
      const url = new URL(window.location.href);
      const titleMeta = document.title || "ParkerPixie Blog";

      const copyBtn = document.getElementById("copyLinkBtn");
      const fbA = document.getElementById("fbShare");
      const nativeBtn = document.getElementById("nativeShareBtn");
      const toast = document.getElementById("toast");

      const fbShareUrl = new URL("https://www.facebook.com/sharer/sharer.php");
      fbShareUrl.searchParams.set("u", url.href);
      fbA.href = fbShareUrl.toString();

      copyBtn?.addEventListener("click", async () => {
        try {
          if (navigator.clipboard?.writeText) {
            await navigator.clipboard.writeText(url.href);
          } else {
            const ta = document.createElement("textarea");
            ta.value = url.href;
            document.body.appendChild(ta);
            ta.select();
            document.execCommand("copy");
            ta.remove();
          }
          showToast();
        } catch {
          window.prompt("Copy this URL:", url.href);
        }
      });

      if (navigator.share) {
        nativeBtn.hidden = false;
        nativeBtn.addEventListener("click", () => {
          navigator.share({ title: titleMeta, url: url.href }).catch(() => {});
        });
      }

      let toastTimer;
      function showToast() {
        toast.classList.add("show");
        clearTimeout(toastTimer);
        toastTimer = setTimeout(() => toast.classList.remove("show"), 1400);
      }
    </script>
  </body>
</html>
