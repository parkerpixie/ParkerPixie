---
// src/pages/blog/feelings-emotions.astro
const title = "When the Loudest Voice Is in My Head";
const subtitle = "Talking back to the spiral with compassion.";
const date = "September 9, 2025";
const tags = ["healing", "self-compassion", "therapy", "mistakes"];

/* Image lives at /public/img/FeelingsEmotions.png */
const cover = "/img/FeelingsEmotions.png";
const coverAbs = "https://parkerpixie.netlify.app/img/FeelingsEmotions.png";

/* ✅ Absolute URL for this page (under /blog/) */
const pageUrl = "https://parkerpixie.netlify.app/blog/feelings-emotions/";
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title} • ParkerPixie Blog</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="Today felt heavy: ship the project, find the mistake, start the spiral. This is me practicing self-compassion in real time—and learning to talk back to the loud voice in my head."
    />
    <link rel="icon" href="/CapyGoldIcon.png" />

    <!-- ✅ Absolute canonical under /blog/ -->
    <link rel="canonical" href={pageUrl} />

    <!-- ✅ Social preview (absolute URLs) -->
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="ParkerPixie" />
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={title + " • ParkerPixie Blog"} />
    <meta property="og:description" content={subtitle} />
    <meta property="og:image" content={coverAbs} />
    <meta property="og:image:alt" content="Feelings & Emotions illustration" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={subtitle} />
    <meta name="twitter:image" content={coverAbs} />

