      /* HERO */
      .hero{
        position:relative; border-radius:24px; overflow:hidden; margin:20px 0 28px; min-height:320px;
        border:1px solid rgba(255,255,255,.08);
        background:
          radial-gradient(1200px 480px at -10% -20%, rgba(216,170,59,.12), transparent 40%),
          radial-gradient(900px 520px at 110% 10%, rgba(138,93,255,.18), transparent 35%),
          linear-gradient(180deg,#1a1426,#151024);
        box-shadow:0 20px 60px rgba(0,0,0,.35);
      }
      .hero img{
        position:absolute; inset:0; width:100%; height:100%; object-fit:cover; opacity:.18; display:none;
      }
      .hero::after{
        content:""; position:absolute; inset:0;
        background:linear-gradient(120deg, rgba(255,255,255,0) 0%, rgba(255,255,255,.18) 15%, rgba(255,255,255,0) 32%) 0 0 / 220% 100% no-repeat;
        animation: shimmer 4s linear infinite; pointer-events:none;
      }
      @keyframes shimmer { to { background-position:-200% 0; } }
      .hero-inner{position:relative; z-index:1; padding:42px 28px; display:grid; gap:12px}
      .eyebrow{display:inline-flex; align-items:center; gap:8px; padding:6px 10px; border-radius:999px; background:#201734; color:#e8dcff; font-weight:600; font-size:14px; width:max-content}
      .sparkle{display:inline-block; width:10px; height:10px; border-radius:2px; background:linear-gradient(135deg,var(--gold),#ffe483)}
      h1{font-size:clamp(28px,5vw,52px); margin:8px 0 4px}
      .sub{color:var(--muted); font-size:clamp(15px,2.2vw,18px); max-width:70ch}

      /* TIMELINE */
      .timeline{position:relative; margin:32px 0 16px; padding-left:26px}
      .timeline::before{content:""; position:absolute; left:12px; top:0; bottom:0; width:2px; background:linear-gradient(180deg,var(--brand),var(--brand-deep)); opacity:.35}
      .step{
        position:relative; margin:20px 0; padding:18px;
        border:1px solid rgba(255,255,255,.08); background:var(--card); border-radius:16px;
        box-shadow:0 20px 50px rgba(0,0,0,.25)
      }
      .step::before{
        content:""; position:absolute; left:-22px; top:20px; width:14px; height:14px; border-radius:50%;
        background:linear-gradient(135deg,var(--brand),var(--brand-deep)); box-shadow:0 0 0 3px #140f1f;
      }
      .step h3{margin:0 0 6px; font-size:20px}
      .meta{color:var(--muted); font-size:14px; margin-bottom:8px}
      .step p{margin:10px 0; line-height:1.7; color:#eae6ff}
      .quote{margin:12px 0; padding:14px 16px; border-left:4px solid var(--brand); background:var(--soft); border-radius:8px}
      .divider{display:flex; align-items:center; gap:10px; color:var(--muted); font-size:14px; margin:20px 0}
      .divider .dot{width:8px; height:8px; border-radius:50%; background:var(--gold)}
      .cta{
