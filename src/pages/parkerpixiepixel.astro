  <script>
    // Filter behavior (works with horizontal rail)
    const filterButtons = document.querySelectorAll('.filter-btn');
    const cards = document.querySelectorAll('.tcard');
    const rail = document.getElementById('rail');

    function applyFilter(filter){
      cards.forEach(card => {
        const match = filter === 'all' || card.dataset.category === filter;
        card.classList.toggle('is-hidden', !match);
      });
      // snap back to start so the first visible card is in view
      rail.scrollTo({ left: 0, behavior: 'smooth' });
    }

    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        filterButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        applyFilter(btn.getAttribute('data-filter'));
      });
    });

    // Prev/Next nudge buttons (scroll by one card width)
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const CARD_W = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--card-w')) + 16; // width + gap

    function nudge(dir){
      rail.scrollBy({ left: dir * CARD_W, behavior: 'smooth' });
    }
    prevBtn?.addEventListener('click', () => nudge(-1));
    nextBtn?.addEventListener('click', () => nudge( 1));

    // Keyboard hint: allow left/right to scroll when rail is focused
    rail.setAttribute('tabindex', '0');
    rail.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') nudge(-1);
      if (e.key === 'ArrowRight') nudge(1);
    });
  </script>
