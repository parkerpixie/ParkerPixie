  <script>
    /* ===== Button-only carousel logic ===== */
    const rail = document.getElementById('rail');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const GAP = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--gap')) || 16;
    const CARD_W = parseInt(getComputedStyle(document.documentElement).getPropertyValue('--card-w')) || 320;
    let index = 0;

    const visibleCards = () => Array.from(rail.querySelectorAll('.tcard')).filter(el => !el.classList.contains('is-hidden'));
    const clamp = (n,min,max)=>Math.max(min,Math.min(n,max));
    function updateButtons(){ const v = visibleCards(); prevBtn.disabled = (index<=0); nextBtn.disabled = (index >= Math.max(0, v.length-1)); }
    function snapTo(i){ const v = visibleCards(); index = clamp(i,0,Math.max(0,v.length-1)); const offset = index*(CARD_W+GAP); rail.style.transform=`translateX(${-offset}px)`; updateButtons(); }
    prevBtn.addEventListener('click',()=>snapTo(index-1));
    nextBtn.addEventListener('click',()=>snapTo(index+1));

    /* ===== Filters ===== */
    const filterButtons = document.querySelectorAll('.filter-btn');
    const allCards = Array.from(rail.querySelectorAll('.tcard'));
    function applyFilter(filter){
      allCards.forEach(card => card.classList.toggle('is-hidden', !(filter==='all'||card.dataset.category===filter)));
      snapTo(0);
    }
    filterButtons.forEach(btn=>{
      btn.addEventListener('click',()=>{
        filterButtons.forEach(b=>b.classList.remove('active'));
        btn.classList.add('active');
        applyFilter(btn.getAttribute('data-filter'));
      });
    });
    applyFilter('all');

    /* ===== Secret Burrow: Facebook share with quote ===== */
    const burrowBtn = document.getElementById('burrowShare');
    burrowBtn?.addEventListener('click',(e)=>{
      e.preventDefault();
      const shareUrl = 'https://parkerpixie.netlify.app/parkerpixiepixel/';
      const quote = "I just checked out ParkerPixie's brand new website and I won a prize! Check it out yourself if you are looking for playful, ADHD-friendly planning templates.";
      const fb = `https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(shareUrl)}&quote=${encodeURIComponent(quote)}`;
      window.open(fb,'_blank','noopener,noreferrer,width=720,height=540');
    });

    /* ===== Copy share link (black button) ===== */
    const copyBtn = document.getElementById('copyShareLink');
    const noteEl  = document.getElementById('copyNote');
    copyBtn?.addEventListener('click', async () => {
      try{
        await navigator.clipboard.writeText('https://parkerpixie.netlify.app/parkerpixiepixel/');
        noteEl.hidden = false; setTimeout(()=>noteEl.hidden=true, 1500);
      }catch(_){
        const ta = document.createElement('textarea');
        ta.value = 'https://parkerpixie.netlify.app/parkerpixiepixel/';
        document.body.appendChild(ta); ta.select(); document.execCommand?.('copy'); document.body.removeChild(ta);
        noteEl.hidden = false; setTimeout(()=>noteEl.hidden=true, 1500);
      }
    });
  </script>
