  <style>
    /* ======= Brand variables (pink/purple re-theme) ======= */
    :root{
      /* Core brand */
      --pp-pink:#ff6fc6;
      --pp-pink-2:#ff8fd5;
      --pp-lilac:#b479ff;
      --pp-violet:#7a5cff;
      --pp-deep:#1b0f2b;

      /* Text colors */
      --ink:#f6edff;             /* light ink on dark */
      --muted:#daccff;           /* soft lavender */
      --ink-dark:#2c2c2c;        /* ink on light cards */

      /* Surfaces */
      --bg-card:#f5f1eb;
      --ring:rgba(255,255,255,.18);

      /* Carousel */
      --rail-pad:1rem;
      --card-w:320px;
      --gap:16px;
    }

    body{
      margin:0;
      font-family:'Segoe UI', ui-sans-serif, system-ui, -apple-system, Roboto, Helvetica, Arial;
      color:var(--ink);
      background:#000;
      position:relative;
      min-height:100vh;
      z-index:1;
    }

    /* ðŸŒŸ Full-page background video */
    .bg-video{position:fixed; inset:0; width:100%; height:100%; object-fit:cover; z-index:-1}

    /* ===== Header (pinkâ†’violet glass bar) ===== */
    header{
      padding:1rem 2rem;
      background:
        linear-gradient(180deg, color-mix(in oklab, var(--pp-violet) 40%, transparent), color-mix(in oklab, var(--pp-pink) 35%, transparent));
      border-bottom:1px solid rgba(255,255,255,.22);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      display:flex; justify-content:space-between; align-items:center;
      position:relative; z-index:2;
      color:var(--ink);
    }
    header a{ color:var(--ink); margin-left:1rem; font-weight:700; text-decoration:none }
    header a:hover{ text-decoration:underline }

    /* ===== Hero ===== */
    .hero{ text-align:center; padding:6rem 2rem 2rem; position:relative; z-index:2 }
    .hero-bubble{
      max-width:1000px; margin:0 auto; padding:24px 22px; border-radius:24px;
      background:
        radial-gradient(900px 400px at 10% -10%, color-mix(in oklab, var(--pp-pink) 22%, transparent), transparent 60%),
        radial-gradient(800px 300px at 90% 0%, color-mix(in oklab, var(--pp-violet) 22%, transparent), transparent 55%),
        rgba(255,255,255,.12);
      border: 1px solid rgba(255,255,255,.28);
      box-shadow: 0 20px 60px rgba(0,0,0,.28), inset 0 1px 0 rgba(255,255,255,.35);
      -webkit-backdrop-filter: blur(10px); backdrop-filter: blur(10px);
    }
    .hero h1{ font-size:3rem; font-weight:800; color:#ffe6f7; margin:0 0 12px; text-shadow:0 2px 12px rgba(0,0,0,.35) }
    .hero p { max-width:700px; font-size:1.15rem; color:var(--muted); margin:0 auto 18px }
    .btn-primary{
      display:inline-block; text-decoration:none; font-weight:800; letter-spacing:.2px;
      padding:.9rem 1.8rem; border-radius:9999px; color:#140a1c;
      background: linear-gradient(135deg, var(--pp-pink) 0%, var(--pp-lilac) 100%);
      border:1px solid color-mix(in oklab, var(--pp-pink) 70%, #000);
      box-shadow: 0 10px 24px rgba(122,92,255,.35), inset 0 0 0 1px rgba(255,255,255,.2);
    }
    .btn-primary:hover{ filter:brightness(1.05) }

    /* ===== Filter bubbles ===== */
    .filter-bubbles{ display:flex; flex-wrap:wrap; justify-content:center; gap:.5rem; padding:1rem 2rem; position:relative; z-index:2 }
    .filter-btn{
      background: color-mix(in oklab, var(--pp-violet) 18%, transparent);
      color:#fff; border:1px solid rgba(255,255,255,.22);
      padding:.5rem 1rem; border-radius:9999px; font-weight:700; cursor:pointer; transition:all .2s;
    }
    .filter-btn:hover{ background: color-mix(in oklab, var(--pp-pink) 30%, var(--pp-violet) 20%) }
    .filter-btn.active{ background: linear-gradient(135deg, var(--pp-violet), var(--pp-pink)); transform:scale(1.05) }

    /* ===== Button-only carousel (no native scroll) ===== */
    .templates-outer{ position:relative; z-index:2; padding:0 var(--rail-pad) 3rem; max-width:1400px; margin:0 auto }
    .templates-viewport{ overflow:hidden; position:relative }
    .templates-rail{ display:flex; gap:var(--gap); padding:1rem 0; transform:translateX(0); will-change:transform; transition:transform .35s ease }

    .tcard{
      flex:0 0 var(--card-w); width:var(--card-w);
      background: var(--bg-card); color:var(--ink-dark);
      border:1px solid rgba(0,0,0,.08);
      border-radius:16px; overflow:hidden;
      box-shadow: 0 10px 24px rgba(0,0,0,.28);
      display:flex; flex-direction:column;
      transition: transform .18s ease, box-shadow .18s ease;
    }
    .tcard:hover{ transform: translateY(-2px); box-shadow: 0 16px 28px rgba(0,0,0,.32) }
    .tcard-meta{ padding:.75rem 1rem .25rem; font-weight:800; color:#5b2abf }
    .tcard-media{ line-height:0; background:#fff; border-top:1px solid rgba(0,0,0,.06); border-bottom:1px solid rgba(0,0,0,.06) }
    .tcard-media img{ display:block; width:100%; height:auto; aspect-ratio:4/3; object-fit:contain; image-rendering:-webkit-optimize-contrast }
    .tcard-body{ padding:1rem; display:flex; flex-direction:column; gap:.5rem; flex:1 }
    .tcard-title{ margin:0; font-size:1.05rem; color:#4b2fb5; font-weight:800 }
    .tcard-desc{ margin:0; color:#5a5a5a; font-size:.94rem; line-height:1.35; flex:1 }
    .tcard-actions{ margin-top:.6rem }
    .save-btn{
      display:inline-block; background: linear-gradient(135deg, var(--pp-pink), var(--pp-lilac));
      color:#160a1e; text-decoration:none; padding:.55rem 1rem; border-radius:9999px; font-weight:800;
      border:1px solid color-mix(in oklab, var(--pp-pink) 70%, #000);
    }
    .save-btn:hover{ filter:brightness(1.05) }

    .is-hidden{ display:none !important }

    /* Arrows */
    .rail-btn{
      position:absolute; top: calc(50% - 24px);
      width:46px; height:46px; border-radius:50%;
      border:1px solid rgba(255,255,255,.25);
      background: color-mix(in oklab, var(--pp-violet) 35%, rgba(255,255,255,.2));
