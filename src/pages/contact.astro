---
/* No frontmatter needed */
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Contact · ParkerPixie</title>
    <meta name="description" content="Contact ParkerPixie — email, socials, and cozy capybara energy." />
    <link rel="icon" href="/CapyGoldIcon.png" />
    <style>
      :root{
        --brand:#8a5dff; --brand-deep:#4b2fb5; --gold:#D8AA3B;
        --ink:#f7f3ff; --bg:#0f0b14; --card:#171220; --muted:#bdb5d9;
        --radius:18px;
      }
      *{box-sizing:border-box}
      html,body{margin:0;padding:0;background:linear-gradient(180deg,#0f0b14,#130e1f 40%,#100b1a);color:var(--ink);font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial}
      a{color:inherit;text-decoration:none}
      img{max-width:100%;height:auto;display:block}
      .wrap{max-width:1080px;margin:0 auto;padding:20px 20px 56px}

      /* Header (matches index) */
      header{position:sticky;top:0;z-index:50;background:rgba(15,11,20,.7);backdrop-filter:blur(10px);border-bottom:1px solid rgba(255,255,255,.06)}
      .nav{display:flex;align-items:center;justify-content:space-between;gap:16px;padding:12px 0}
      .brand{display:flex;align-items:center;gap:12px;font-weight:800;letter-spacing:.3px}
      .brand img{width:28px;height:28px;filter:drop-shadow(0 0 8px rgba(216,170,59,.45))}
      .brand span{font-size:18px}
      .links{display:flex;gap:16px}
      .links a{padding:8px 12px;border-radius:12px;transition:.2s ease}
      .links a:hover{background:rgba(255,255,255,.07)}
      .links a.cta{background:linear-gradient(135deg,var(--brand),var(--brand-deep));box-shadow:0 8px 30px rgba(138,93,255,.35)}
      .links a.cta:hover{transform:translateY(-1px)}

      /* Layout */
      .hero{display:grid;grid-template-columns:1.05fr .95fr;gap:28px;align-items:stretch;margin-top:28px}
      @media (max-width:900px){.hero{grid-template-columns:1fr;gap:20px}}
      .card{background:radial-gradient(1000px 360px at -10% -10%, rgba(216,170,59,.08), transparent),var(--card);
        border:1px solid rgba(255,255,255,.06);border-radius:var(--radius);padding:22px;box-shadow:0 20px 60px rgba(0,0,0,.35)}
      h1{margin:.35rem 0 .6rem;font-size:clamp(28px,4.5vw,44px);line-height:1.05}
      p.lede{font-size:clamp(15px,2.4vw,18px);color:#e8e2ff;opacity:.95;margin:8px 0 18px}
      .list{display:flex;flex-direction:column;gap:10px;margin:18px 0}
      .item{display:flex;align-items:center;gap:12px;padding:10px 12px;border-radius:14px;border:1px solid rgba(255,255,255,.08);background:#1b1527}
      .item:hover{box-shadow:0 0 0 3px rgba(138,93,255,.25)}
      .tag{font-size:12px;background:rgba(216,170,59,.15);border:1px solid rgba(216,170,59,.35);color:#ffefb7;padding:4px 8px;border-radius:999px}
      .btn{display:inline-flex;align-items:center;gap:10px;padding:12px 16px;border-radius:14px;border:none;background:linear-gradient(135deg,var(--brand),var(--brand-deep));box-shadow:0 8px 30px rgba(138,93,255,.35);cursor:pointer}
      .friend{display:flex;align-items:center;gap:10px}
      .friend code{background:#140f1f;border:1px solid rgba(255,255,255,.08);padding:6px 8px;border-radius:8px}
      .copy{padding:6px 10px;border-radius:8px;border:1px solid rgba(255,255,255,.12);background:#241b36;cursor:pointer}
      figure{margin:0}
      figure img{border-radius:16px;border:1px solid rgba(255,255,255,.08);box-shadow:0 20px 60px rgba(0,0,0,.45);height:100%;object-fit:cover;width:100%}

      footer{margin-top:42px;padding-top:18px;border-top:1px solid rgba(255,255,255,.08);color:#9b93b9;font-size:13px}
    </style>
  </head>

  <body>
    <header>
      <div class="wrap nav">
        <a class="brand" href="/">
          <img src="/CapyGoldIcon.png" alt="ParkerPixie gold capybara icon" />
          <span>ParkerPixie</span>
        </a>
        <nav class="links">
          <a href="/about">About</a>
          <a class="cta" href="/contact">Contact</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <section class="hero">
        <!-- Left: contact content -->
        <div class="card">
          <h1>Contact ParkerPixie</h1>
          <p class="lede">I’m friendly, cozy, and very reachable. Pick your favorite vibe:</p>

          <a class="item" href="mailto:ParkerPixieDust@gmail.com" aria-label="Email ParkerPixie">
            <span>✉️ <strong>Email</strong> — ParkerPixieDust@gmail.com</span>
            <span class="tag">best for commissions</span>
          </a>

          <a class="item" href="https://www.facebook.com/ParkerPixieDust/" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <span>📘 Facebook</span>
          </a>

          <a class="item" href="https://www.instagram.com/parkerpixiedust/" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <span>📸 Instagram</span>
          </a>

          <a class="item" href="https://www.twitch.tv/parkerpixiedust" target="_blank" rel="noopener noreferrer" aria-label="Twitch">
            <span>🎥 Twitch</span>
          </a>

          <a class="item" href="https://discord.gg/ypJjtSqN" target="_blank" rel="noopener noreferrer" aria-label="Discord">
            <span>💬 Discord</span>
            <span class="tag">cozy chat</span>
          </a>

          <div class="item friend" role="group" aria-label="Steam friend code">
            <span>🎮 Steam friend code</span>
            <code id="steamcode">119555934</code>
            <button class="copy" id="copyBtn" type="button">Copy</button>
          </div>

          <p style="margin-top:14px">
            Prefer email? Click this big friendly button → 
            <a class="btn" href="mailto:ParkerPixieDust@gmail.com">Email ParkerPixie</a>
          </p>
        </div>

        <!-- Right: image -->
        <figure>
          <img src="/ParkerPaws.jpg" alt="ParkerPixie with amigurumi creations" />
        </figure>
      </section>

      <footer>
        © <span id="y"></span> ParkerPixie · Made with ✨ glitter ✨, 💃 sass 💃, and 💖 love 💖 from Madison, WI
      </footer>
    </main>

    <script>
      document.getElementById('y').textContent = new Date().getFullYear();
      const btn = document.getElementById('copyBtn');
      const codeEl = document.getElementById('steamcode');
      btn?.addEventListener('click', async () => {
        try{
          await navigator.clipboard.writeText(codeEl.textContent.trim());
          btn.textContent = 'Copied!';
          setTimeout(()=>btn.textContent='Copy', 1200);
        }catch(e){
          btn.textContent = 'Press ⌘/Ctrl+C';
          const range = document.createRange();
          range.selectNodeContents(codeEl);
          const sel = window.getSelection();
          sel.removeAllRanges(); sel.addRange(range);
        }
      });
    </script>
  </body>
</html>
