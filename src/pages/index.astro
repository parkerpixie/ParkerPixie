    <style>
      /* === Dark theme (black background) === */
      :root{
        --bg:#000;            /* page background */
        --ink:#fff;           /* main text */
        --muted:#cbbde7;      /* secondary text */
        --brand:#8a5dff;      /* Parker purple */
        --tile:#0f0f13;       /* tile bg */
        --line:rgba(255,255,255,.16);
      }
      *{box-sizing:border-box}
      html,body{margin:0;padding:0;background:var(--bg);color:var(--ink);
        font:16px/1.5 system-ui,-apple-system,Segoe UI,Roboto,Inter,Arial}

      .wrap{max-width:1100px;margin:auto;padding:24px}
      header .nav{display:flex;align-items:center;justify-content:space-between}
      .brand{display:flex;align-items:center;gap:.6rem;text-decoration:none;color:var(--ink);font-weight:700}
      .brand img{height:32px;width:auto;display:block;filter:drop-shadow(0 0 6px rgba(255,255,255,.1))}
      nav.links a{margin-left:16px;text-decoration:none;color:var(--ink);opacity:.9}
      nav .cta{padding:.45rem .8rem;border-radius:999px;background:var(--brand);color:#fff}

      .hero{display:grid;grid-template-columns:1.1fr .9fr;gap:28px;align-items:center;margin-top:20px}
      @media (max-width:900px){.hero{grid-template-columns:1fr}}
      .eyebrow{letter-spacing:.12em;text-transform:uppercase;color:var(--muted);font-size:.8rem}
      h1{margin:.3rem 0 0;line-height:1.1}
      .lede{color:#e7e0ffcc;margin:.6rem 0 1rem}

      .cta-row{display:flex;flex-wrap:wrap;gap:.6rem;margin:1rem 0}
      .btn{border:1px solid var(--line);padding:.6rem .9rem;border-radius:10px;text-decoration:none;color:var(--ink);background:transparent}
      .btn.primary{background:var(--brand);color:#fff;border-color:transparent}
      .caption{color:var(--muted);font-size:.9rem}

      figure{margin:0}
      figure img{width:100%;height:auto;border-radius:16px;box-shadow:0 10px 30px rgba(0,0,0,.6)}

      .grid{display:grid;grid-template-columns:repeat(3,1fr);gap:16px;margin:34px 0}
      @media (max-width:900px){.grid{grid-template-columns:1fr}}
      .tile{display:block;padding:18px;border:1px solid var(--line);border-radius:16px;text-decoration:none;color:var(--ink);background:var(--tile)}
      .tile h3{margin:.2rem 0 .2rem}
      .chip{display:inline-block;font-size:.75rem;color:#dacfff;background:#1a1233;padding:.25rem .5rem;border-radius:999px;margin-bottom:.4rem}

      footer{margin:28px 0;color:var(--muted);text-align:center;font-size:.95rem}
    </style>

