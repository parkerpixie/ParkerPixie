---
// src/pages/index.astro  (v5)
// Standalone page — no imports, no Astro.glob, no layouts.
// Safe: all CSS inline; assets loaded from /public
const year = new Date().getFullYear();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ParkerPixie — Sass · Shimmer · Sparkle</title>
    <meta
      name="description"
      content="ParkerPixie—cozy crochet (Paws), playful pop persona (Pop), and pixel-perfect tinkering (Pixel). Sass · Shimmer · Sparkle ✨"
    />
    <link rel="icon" href="/CapyGoldIcon.png" />

    <style>
      :root{--bg:#0b0b10;--card:#111119;--ink:#f7f7fb;--muted:#bcb9cd;--accent:#d6b36b;--radius:18px;--shadow:0 10px 30px rgba(0,0,0,.35), inset 0 1px 0 rgba(255,255,255,.03)}
      *{box-sizing:border-box} html,body{height:100%}
      body{
        margin:0;color:var(--ink);
        background:
          radial-gradient(1200px 600px at 10% -10%, rgba(180,121,255,.12), transparent 60%),
          radial-gradient(1000px 500px at 90% 10%, rgba(214,179,107,.10), transparent 60%),
          radial-gradient(800px 800px at 50% 120%, rgba(180,121,255,.08), transparent 60%),var(--bg);
        font:16px/1.6 ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,"Helvetica Neue",Arial
      }
      .wrap{max-width:1100px;margin:0 auto;padding:28px 20px 80px}
      /* Header */
      header.site{display:flex;align-items:center;justify-content:space-between;gap:16px;padding:14px 0 6px}
      .brand{display:flex;align-items:center;gap:12px;text-decoration:none;color:var(--ink)}
      .brand img{width:40px;height:40px;object-fit:contain;border-radius:10px;filter:drop-shadow(0 4px 12px rgba(214,179,107,.35))}
      .brand .name{font-weight:800;letter-spacing:.4px}
      nav ul{display:flex;gap:14px;list-style:none;margin:0;padding:0;flex-wrap:wrap}
      nav a{color:var(--ink);text-decoration:none;padding:8px 12px;border-radius:999px;border:1px solid transparent}
      nav a:hover{background:rgba(255,255,255,.06);border-color:rgba(255,255,255,.08)}
      /* Hero */
      .hero{margin-top:18px;display:grid;grid-template-columns:1.1fr .9fr;gap:24px}
      @media (max-width:900px){.hero{grid-template-columns:1fr}}
      .card{background:linear-gradient(180deg,rgba(255,255,255,.02),rgba(255,255,255,.00));border:1px solid rgba(255,255,255,.08);border-radius:var(--radius);box-shadow:var(--shadow);padding:26px}
      h1{margin:.2rem 0 0;font-size:clamp(28px,4.2vw,48px);line-height:1.1}
      .lede{color:var(--muted);margin:12px 0 20px}
      .actions{display:flex;gap:12px;flex-wrap:wrap}
      .btn{display:inline-flex;align-items:center;gap:8px;padding:10px 14px;border-radius:12px;border:1px solid rgba(255,255,255,.12);text-decoration:none;color:var(--ink);background:linear-gradient(180deg,rgba(255,255,255,.06),rgba(255,255,255,.02))}
      .btn.primary{background:linear-gradient(180deg,rgba(180,121,255,.25),rgba(180,121,255,.10));border-color:rgba(180,121,255,.4);color:#f7ecff;box-shadow:0 0 0 2px rgba(180,121,255,.12)}
      /* Grid (4 cards: About, Blog, Capybara, Paws) */
      .grid{margin-top:26px;display:grid;grid-template-columns:repeat(4,1fr);gap:18px}
      @media (max-width:1100px){.grid{grid-template-columns:repeat(2,1fr)}}
      @media (max-width:650px){.grid{grid-template-columns:1fr}}
      .pill .hd{font-weight:800;font-size:20px;margin:0 0 6px}
      .pill p{color:var(--muted);margin:0 0 14px}
      .chip{display:inline-block;background:#1a1a24;border:1px solid rgba(255,255,255,.08);padding:6px 10px;border-radius:999px;font-size:12px;color:#d7d5e6;margin-right:6px;margin-bottom:6px}
      footer{margin-top:32px;color:#d0cee1;opacity:.85}
      .mini{font-size:12px;color:#a9a8bb}
    </style>
  </head>

  <body>
    <div class="wrap">
      <!-- Header: keep your original nav -->
      <header class="site" role="banner" aria-label="Site header">
        <a class="brand" href="/" aria-label="ParkerPixie Home">
          <img src="/CapyGoldIcon.png" alt="Gold capybara icon" />
          <div>
            <div class="name">ParkerPixie</div>
            <small style="color:#cfcde0">Sass · Shimmer · Sparkle</small>
          </div>
        </a>
        <nav aria-label="Primary">
          <ul>
            <li><a href="/about/">Who is ParkerPixie</a></li>
            <li><a href="/blog/">Blog</a></li>
            <li><a href="/capybara/">What’s with the Capybara</a></li>
          </ul>
        </nav>
      </header>

      <!-- Hero -->
      <section class="hero" role="region" aria-label="Intro">
        <div class="card">
          <h1>ParkerPixie</h1>
          <p class="lede">Sass · Shimmer · Sparkle — a cozy blend of design, streaming, and capybara calm.</p>
          <div class="actions">
            <a class="btn primary" href="/blog/">Read the Blog</a>
            <a class="btn" href="/about/">Meet ParkerPixie</a>
            <a class="btn" href="/capybara/">Why Capybaras?</a>
          </div>
        </div>

        <div class="card" aria-label="Hero image card">
          <!-- exact filename you showed in repo -->
          <img
            src="/hero.jpg"
            alt="ParkerPixie hero image"
            style="width:100%;height:auto;border-radius:14px;display:block;"
          />
          <p class="mini" style="margin-top:10px">Welcome in—make yourself cozy.</p>
        </div>
      </section>

      <!-- Cards -->
      <section class="grid" role="region" aria-label="Site sections">
        <article class="card pill">
          <h2 class="hd">Who is ParkerPixie</h2>
          <p>Backstory, ethos, and the glittery why behind the vibe.</p>
          <p><a class="btn" href="/about/">Learn more →</a></p>
        </article>

        <article class="card pill">
          <h2 class="hd">Blog</h2>
          <p>Essays, updates, and sparkly notes from the road.</p>
          <p><a class="btn" href="/blog/">Go to blog →</a></p>
        </article>

        <article class="card pill">
          <h2 class="hd">What’s with the Capybara</h2>
          <p>Spirit animal, grounding energy, and the Bejeweled alter-ego.</p>
          <p><a class="btn" href="/capybara/">Read the story →</a></p>
        </article>

        <!-- Paws (keep the card you already have) -->
        <article class="card pill">
          <h2 class="hd">Paws</h2>
          <p>Amigurumi commissions, care guides, and WIPs—soft, celestial, capy-coded.</p>
          <div>
            <span class="chip">Amigurumi</span>
            <span class="chip">Care Cards</span>
            <span class="chip">Commissions</span>
          </div>
          <p style="margin-top:12px">
            <a class="btn" href="/parkerpixiepaws/">Enter the Paws Studio →</a>
          </p>
        </article>
      </section>

      <footer role="contentinfo" style="margin-top:18px">
        <div class="mini">© {year} ParkerPixie • Made with capybara calm &amp; bejeweled sparkle</div>
      </footer>
    </div>
  </body>
</html>

