const year = new Date().getFullYear();
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ParkerPixie ‚Äî Sass ¬∑ Shimmer ¬∑ Sparkle</title>
    <meta name="description" content="ParkerPixie‚Äîcozy crochet (Paws), playful pop persona (Pop), and pixel-perfect tinkering (Pixel). Sass ¬∑ Shimmer ¬∑ Sparkle ‚ú®" />
    <link rel="icon" href="/CapyGoldIcon.png" />

    <!-- Page-scoped styles (safe + stable) -->
    <style>
      :root{
        --ink:#0b0b12; --bg:#07060b; --brand:#8a5dff; --brand-deep:#4026a6; --gold:#f1d27a;
      }
      *{box-sizing:border-box}
      html,body{height:100%}
      body{
        margin:0; color:#fff; background: radial-gradient(1200px 700px at 10% -10%, #1a1240, transparent),
                               radial-gradient(900px 600px at 110% 10%, #1a0f25, transparent),
                               var(--bg);
        font:16px/1.6 system-ui, -apple-system, Segoe UI, Roboto, "Helvetica Neue", Arial, sans-serif;
      }
      a{color:inherit; text-decoration:none}
      .wrap{max-width:1080px; margin:auto; padding:20px}
      header{border-bottom:1px solid rgba(255,255,255,.08); position:sticky; top:0; backdrop-filter:blur(6px)}
      .nav{display:flex; align-items:center; justify-content:space-between; gap:20px}
      .brand{display:flex; align-items:center; gap:10px; font-weight:700; letter-spacing:.4px}
      .brand img{width:40px; height:40px; object-fit:contain}
      .links{display:flex; gap:12px}
      .cta{padding:.6rem .9rem; border:1px solid rgba(255,255,255,.2); border-radius:999px}
      .cta:hover{border-color:#fff}
      .hero{display:grid; grid-template-columns:1.1fr .9fr; gap:28px; align-items:center; padding-block:48px}
      .hero-card .eyebrow{font-size:.85rem; opacity:.8}
      h1{margin:.2rem 0 0; font-size:clamp(1.8rem, 2.8vw, 2.6rem)}
      .lede{opacity:.9; max-width:50ch}
      .cta-row{display:flex; gap:10px; margin:18px 0}
      .btn{padding:.7rem 1rem; border:1px solid rgba(255,255,255,.25); border-radius:12px}
      .btn.primary{background:linear-gradient(135deg, var(--brand), var(--brand-deep)); border:none}
      figure{margin:0; border-radius:16px; overflow:hidden; box-shadow:0 10px 30px rgba(0,0,0,.4)}
      figure img{display:block; width:100%; height:auto}
      .grid{display:grid; grid-template-columns:repeat(3,1fr); gap:16px; padding-block:28px}
      .tile{padding:18px; border:1px solid rgba(255,255,255,.12); border-radius:16px; background:rgba(255,255,255,.03)}
      .tile:hover{border-color:rgba(255,255,255,.4)}
      .chip{font-size:.75rem; opacity:.8}
      footer{opacity:.8; padding:40px 0}
      @media (max-width:900px){
        .hero{grid-template-columns:1fr}
        .grid{grid-template-columns:1fr}
      }
    </style>
  </head>

  <body>
    <header>
      <div class="wrap nav">
        <a class="brand" href="/">
          <img src="/CapyGoldIcon.png" alt="ParkerPixie gold capybara icon" />
