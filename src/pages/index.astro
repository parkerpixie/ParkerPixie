    .card{background:var(--card);padding:18px;border-radius:var(--radius);border:1px solid rgba(255,255,255,.08)}
    form{display:grid;gap:12px}
    input,textarea{width:100%;padding:12px;border-radius:10px;border:1px solid rgba(255,255,255,.15);background:#0f0e18;color:var(--ink)}
    button{padding:12px 16px;border-radius:12px;border:none;background:var(--accent);font-weight:700;color:#1e1b2e}
