---
/*
  InfinityNikki.astro — clean restart
  - Page-scoped styles only (scoped by .nikki wrapper)
  - Background image path: /public/img/InfinityNikki.jpg  ->  /img/InfinityNikki.jpg
  - Drop gallery images in /public/img/nikki/ and list them in `gallery` below
*/

const pageTitle = "Infinity Nikki — ParkerPixie";
const pageDesc  = "My Infinity Nikki gallery — cozy glam, celestial shimmer, all the looks I love.";

const gallery = [
  // Replace these with your real Steam shots. Filenames are examples.
  { src: "/img/nikki/look-01.jpg", alt: "Celestial gown with star-kissed veil" },
  { src: "/img/nikki/look-02.jpg", alt: "Iridescent cape with pearl boots" },
  { src: "/img/nikki/look-03.jpg", alt: "Goth-luxe corset with glimmer skirt" },
  { src: "/img/nikki/look-04.jpg", alt: "Pastel streetwear and charm bag" },
  { src: "/img/nikki/look-05.jpg", alt: "Opal armor with chiffon sleeves" },
  { src: "/img/nikki/look-06.jpg", alt: "Rose quartz set with ribbon heels" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{pageTitle}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={pageDesc} />
    <link rel="icon" href="/CapyGoldIcon.png" />

    <style>
      /* =========================
         Page-scoped styling (.nikki)
         ========================= */
      :root {
        --ink: #e7e4ff;          /* soft moonlit text */
        --muted: #bdb6ff;        /* lilac-muted text */
        --bg: #000000;           /* pure black base */
        --accent: #f2c14e;       /* capy gold */
        --chip: #1a152a;         /* card bg */
        --chip-2: #0e0b18;       /* deeper card */
        --ring: #7a5cff;         /* violet ring */
      }

      .nikki {
        min-height: 100svh;
        color: var(--ink);
        background:
          radial-gradient(1200px 600px at 50% -10%, rgba(122,92,255,0.18), rgba(122,92,255,0) 60%),
          radial-gradient(800px 400px at 10% 0%, rgba(242,193,78,0.20), rgba(242,193,78,0) 50%),
          url("/img/InfinityNikki.jpg") center / cover fixed no-repeat,
          var(--bg);
        display: grid;
        grid-template-rows: auto 1fr auto;
      }

      /* Header */
      .site-header {
        position: sticky;
        top: 0;
        backdrop-filter: blur(8px);
        background: color-mix(in oklab, #000 70%, transparent);
        border-bottom: 1px solid rgba(255,255,255,0.08);
        z-index: 5;
      }
      .nav {
        max-width: 1100px;
        margin: 0 auto;
        padding: 12px 20px;
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .brand {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
        color: var(--ink);
        font-weight: 700;
        letter-spacing: 0.3px;
      }
      .brand img {
        width: 28px;
        height: 28px;
        border-radius: 999px;
        box-shadow: 0 0 10px rgba(242,193,78,0.35);
      }
      .nav-links {
        margin-left: auto;
        display: flex;
        gap: 16px;
        align-items: center;
      }
      .nav-links a {
        color: var(--muted);
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 10px;
      }
      .nav-links a.active,
      .nav-links a:hover {
        color: var(--ink);
        background: rgba(255,255,255,0.06);
        outline: 1px solid rgba(255,255,255,0.08);
      }

      /* Hero */
      .hero {
        max-width: 1100px;
        margin: 36px auto 8px;
        padding: 24px 20px 8px;
      }
      .eyebrow {
        color: var(--muted);
        font-size: 0.9rem;
        letter-spacing: 0.18em;
        text-transform: uppercase;
      }
      h1 {
        margin: 6px 0 12px;
        font-size: clamp(2rem, 4vw, 3rem);
        line-height: 1.1;
        text-shadow: 0 0 18px rgba(122,92,255,0.45);
      }
      .lead {
        max-width: 70ch;
        color: color-mix(in oklab, var(--ink) 85%, #d1ccff);
        font-size: 1.05rem;
      }

      /* Chips row */
      .chips {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 16px;
      }
      .chip {
        background: linear-gradient(180deg, var(--chip), var(--chip-2));
        border: 1px solid rgba(255,255,255,0.08);
        border-radius: 999px;
        padding: 8px 12px;
        font-size: 0.9rem;
        color: var(--muted);
      }

      /* Gallery */
      .gallery-wrap {
        max-width: 1100px;
        margin: 18px auto 40px;
        padding: 0 20px 40px;
      }
      .grid {
        display: grid;
        gap: 12px;
        grid-template-columns: repeat(2, 1fr);
      }
      @media (min-width: 900px) {
        .grid { grid-template-columns: repeat(3, 1fr); }
      }
      .card {
        position: relative;
        overflow: clip;
        border-radius: 14px;
        background: rgba(255,255,255,0.02);
        border: 1px solid rgba(255,255,255,0.08);
      }
      .card a {
        display: block;
        line-height: 0;
        text-decoration: none;
        color: inherit;
      }
      .card img {
        width: 100%;
        height: 100%;
        aspect-ratio: 4 / 5;
        object-fit: cover;
        display: block;
        filter: saturate(1.05) contrast(1.02);
      }
      .card:hover::after {
        content: "";
        position: absolute; inset: 0;
        box-shadow: inset 0 0 0 2px color-mix(in oklab, var(--ring) 55%, transparent);
        border-radius: 14px;
      }

      /* Lightbox (<dialog>) */
      dialog#lb {
        width: min(92vw, 1100px);
        border: none;
        padding: 0;
        background: color-mix(in oklab, #000 85%, #1c1238);
        border-radius: 12px;
        overflow: clip;
      }
      dialog::backdrop {
        background: rgba(0,0,0,0.7);
        backdrop-filter: blur(3px);
      }
      .lb-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 12px;
        border-bottom: 1px solid rgba(255,255,255,0.08);
      }
      .lb-title {
        color: var(--muted);
        font-size: 0.95rem;
      }
      .lb-close {
        appearance: none;
        background: rgba(255,255,255,0.06);
        color: var(--ink);
        border: 1px solid rgba(255,255,255,0.12);
        border-radius: 10px;
        padding: 6px 10px;
        cursor: pointer;
      }
      .lb-media {
        line-height: 0;
        display: grid;
        place-items: center;
        max-height: 86svh;
      }
      .lb-media img {
        width: 100%;
        height: auto;
        display: block;
      }

      /* Footer */
      .site-footer {
        border-top: 1px solid rgba(255,255,255,0.08);
        color: var(--muted);
        font-size: 0.9rem;
        padding: 16px 20px 30px;
        text-align: center;
      }
      .site-footer a { color: var(--ink); text-decoration: none; }
    </style>
  </head>

  <body>
    <div class="nikki">
      <!-- Header -->
      <header class="site-header" role="banner">
        <nav class="nav" aria-label="Primary">
          <a class="brand" href="/">
            <img src="/CapyGoldIcon.png" alt="ParkerPixie gold capybara" />
            <span>ParkerPixie</span>
          </a>
          <div class="nav-links">
            <a href="/parkerpixiepop/">Pop</a>
            <a href="/parkerpixiepaws/">Paws</a>
            <a href="/blog/">Blog</a>
            <a class="active" href="/infinitynikki/">Infinity Nikki</a>
            <a href="/about/">About</a>
            <a href="/contact/">Contact</a>
          </div>
        </nav>
      </header>

      <!-- Hero -->
      <header class="hero">
        <div class="eyebrow">Cozy glam · Celestial couture</div>
        <h1>Infinity Nikki</h1>
        <p class="lead">
          A living gallery of my favorite looks — shimmering fabrics, dreamy palettes,
          and the whimsical chaos that feels very <em>ParkerPixie</em>.
        </p>
        <div class="chips" aria-label="Tags">
          <span class="chip">Ethereal</span>
          <span class="chip">Glitter-core</span>
          <span class="chip">Pastel goth</span>
          <span class="chip">Dreamy tech</span>
        </div>
      </header>

      <!-- Gallery -->
      <main class="gallery-wrap" role="main">
        <section aria-label="Gallery">
          <div class="grid">
            {gallery.map((g) => (
              <figure class="card">
                <a href={g.src} data-alt={g.alt} class="thumb">
                  <img loading="lazy" decoding="async" src={g.src} alt={g.alt} />
                </a>
              </figure>
            ))}
          </div>
        </section>
      </main>

      <!-- Lightbox dialog -->
      <dialog id="lb" aria-label="Image viewer">
        <div class="lb-bar">
          <div class="lb-title" id="lb-caption">Infinity Nikki</div>
          <button class="lb-close" type="button" id="lb-close">Close</button>
        </div>
        <div class="lb-media">
          <img id="lb-img" alt="" />
        </div>
      </dialog>

      <!-- Footer -->
      <footer class="site-footer">
        <p>
          Back to <a href="/parkerpixiepop/">ParkerPixiePop</a> ·
          © {new Date().getFullYear()} ParkerPixie · Sass · Shimmer · Sparkle
        </p>
      </footer>
    </div>

    <script is:inline>
      // Lightweight lightbox
      const dlg = document.getElementById('lb');
      const lbImg = document.getElementById('lb-img');
      const lbCap = document.getElementById('lb-caption');
      const btnClose = document.getElementById('lb-close');

      document.addEventListener('click', (e) => {
        const a = e.target.closest('a.thumb');
        if (!a) return;
        e.preventDefault();
        lbImg.src = a.getAttribute('href');
        lbImg.alt = a.dataset.alt || "";
        lbCap.textContent = a.dataset.alt || "Infinity Nikki";
        dlg.showModal();
      });

      btnClose?.addEventListener('click', () => dlg.close());
      dlg?.addEventListener('click', (e) => {
        // click backdrop to close
        const rect = dlg.getBoundingClientRect();
        const inDialog =
          e.clientX >= rect.left && e.clientX <= rect.right &&
          e.clientY >= rect.top  && e.clientY <= rect.bottom;
        if (!inDialog) dlg.close();
      });
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && dlg.open) dlg.close();
      });
    </script>
  </body>
</html>
