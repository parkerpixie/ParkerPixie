  <style>
    :root{
      --bg: #faf7fb;
      --panel: #ffffff;
      --ink: #3a3042;
      --subtle: #6e6274;
      --brand: #7c6ac8;
      --brand-2: #e9d8fd;   /* lavender pill background */
      --accent: #e7b3c2;
      --glow: 0 10px 24px rgba(60, 40, 120, .12);
      --radius: 18px;
      --radius-lg: 26px;

      /* nav */
      --nav-text: #fff;
      --nav-grad-1:#6e51c7;
      --nav-grad-2:#7f62d6;
      --nav-grad-3:#6e51c7;
    }

    *{box-sizing:border-box}
    html,body{height:100%}
    body{
      margin:0;
      color:var(--ink);
      font: 16px/1.55 system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Apple Color Emoji", "Segoe UI Emoji";
      letter-spacing:.2px;
      background: radial-gradient(1200px 800px at 10% 0%, rgba(255,255,255,1) 0%, var(--bg) 60%), var(--bg);
      background-attachment: fixed;
    }
    img{max-width:100%; display:block}
    a{color:var(--brand); text-decoration:none}
    a:hover{text-decoration:underline}

    .sitebar{
      position: sticky; top: 0; z-index: 1000;
      background: linear-gradient(90deg,var(--nav-grad-1),var(--nav-grad-2),var(--nav-grad-3));
      color: var(--nav-text);
      border-bottom: 1px solid rgba(255,255,255,.35);
      backdrop-filter: saturate(140%) blur(6px);
    }
    .sitebar .navwrap{
      max-width:1100px; margin:0 auto; padding:10px 18px;
      display:flex; align-items:center; justify-content:space-between; gap:12px;
    }
    .site-brand{display:flex; align-items:center; gap:10px; font-weight:800; color:#fff; text-decoration:none}
    .site-brand img{width:22px; height:22px}
    .site-links{display:flex; gap:18px; align-items:center; flex-wrap:wrap}
    .site-links a{color:#fff; opacity:.95; text-decoration:none; font-weight:600;}
    .site-links a:hover{opacity:1; text-decoration:underline}
    .site-links .active{padding:6px 10px; border-radius:999px; background:rgba(255,255,255,.16);}

    .wrap{max-width:1100px; margin:auto; padding:22px}
    header{ position:relative; border-radius: var(--radius-lg); overflow:hidden; box-shadow: var(--glow); background: rgba(255,255,255,0.9); }
    .hero{display:grid; grid-template-columns: 1.1fr .9fr; gap:20px; align-items:center; padding:32px 28px}
    @media (max-width: 880px){ .hero{grid-template-columns:1fr; padding:24px} }

    .hero-copy h1{margin:0 0 8px; font-size: clamp(28px, 3.6vw, 44px);}
    .hero-copy p{margin:0 0 16px; color:var(--subtle)}
    .badges{display:flex; gap:10px; flex-wrap:wrap; margin:10px 0 18px}
    .badge{background:var(--panel); border:1px solid #eee; padding:6px 10px; border-radius:999px; font-size:12px; color:var(--subtle)}
    .cta-row{display:flex; gap:12px; flex-wrap:wrap}
    .btn{display:inline-block; padding:12px 16px; border-radius:12px; font-weight:600; border:1px solid transparent; box-shadow: var(--glow)}
    .btn.primary{background: var(--brand); color:#fff}
    .btn.primary:hover{filter:brightness(1.05)}
    .btn.ghost{background:#fff; border-color:#eee; color:var(--ink)}

    .hero-art{position:relative}
    .cloud{ position:absolute; inset:auto auto 10% -10%; width:120%; height:70%; z-index:0;
      background: radial-gradient(300px 140px at 20% 30%, rgba(124,106,200,.22), transparent 60%),
                  radial-gradient(360px 160px at 80% 60%, rgba(231,179,194,.20), transparent 60%);
      filter: blur(24px); }
    .hero-img{position:relative; z-index:1; border-radius: 20px; box-shadow: var(--glow);
      border: 6px solid #fff; width:100%; height:auto; max-width:360px; object-fit:cover}

    section{margin:28px 0}
    .card{background:var(--panel); border:1px solid #eee; border-radius: var(--radius); box-shadow: var(--glow)}
    .section-head{display:flex; align-items:baseline; justify-content:space-between; gap:12px; margin:0 0 14px}
    .section-head h2{margin:0; font-size: clamp(20px, 2.6vw, 28px)}
    .section-head p{margin:4px 0 0; color:var(--subtle)}

    .iotm{display:grid; grid-template-columns: 1fr 1fr; gap:22px; padding:22px}
    @media (max-width: 820px){ .iotm{grid-template-columns:1fr} }
    .price{font-size: clamp(22px, 3vw, 28px); font-weight:800; color:var(--brand)}
    .chips{display:flex; gap:8px; flex-wrap:wrap}
    .chip{padding:6px 10px; border-radius:999px; background:var(--brand-2); color:#4b3f7f; font-size:12px}
    .iotm .btn{margin-top:10px}

    .grid{display:grid; grid-template-columns: repeat(12, 1fr); gap:14px}
    .g-item{grid-column: span 4; border-radius:16px; overflow:hidden; border:1px solid #eee;
      background:#fff; box-shadow: var(--glow)}
    .g-item img{aspect-ratio:1/1; object-fit:cover}
    .g-item .cap{padding:10px; font-size:14px; color:var(--subtle)}
    @media (max-width: 900px){ .g-item{grid-column: span 6} }
    @media (max-width: 560px){ .g-item{grid-column: span 12} }

    .steps{display:grid; grid-template-columns: repeat(3,1fr); gap:14px; padding:24px}
    @media (max-width: 800px){ .steps{grid-template-columns:1fr} }
    .step{padding:16px; border:1px solid #eee; border-radius:16px; background:#fff}
    .k{display:inline-grid; place-items:center; width:34px; height:34px; border-radius:10px;
      background:var(--brand-2); color:#4b3f7f; font-weight:700; margin-bottom:6px}

    details{border:1px solid #eee; border-radius:12px; padding:12px 14px; background:#fff}
    details + details{margin-top:10px}
    summary{cursor:pointer; font-weight:600}
    summary::-webkit-details-marker{display:none}

    footer{margin:26px 0 40px; color:var(--subtle); text-align:center}

    .pillwrap{display:flex; gap:14px; flex-wrap:wrap; margin-top:10px}
    .pilllink{display:inline-flex; align-items:center; justify-content:center;
      padding:10px 16px; border-radius:999px; background:var(--brand-2);
      color:#4b3f7f; font-weight:600; white-space:nowrap; border:1px solid #e7defc;
      box-shadow: 0 3px 10px rgba(124,106,200,.18);
      transition: transform .08s ease, box-shadow .12s ease;}
    .pilllink:hover{ text-decoration:none; transform: translateY(-1px); box-shadow: 0 6px 16px rgba(124,106,200,.22); }
    .pilllink:focus{ outline:2px solid #c4b5fd; outline-offset:2px }

    body.bg-missing header{ background: rgba(255,255,255,0.95); }
