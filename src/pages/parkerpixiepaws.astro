  <link rel="icon" href="/CapyGoldIcon.png" />
  <style>
    :root {
      --paws-gold: #d4af37;
      --paws-lilac: #cbb4ff;
      --paws-oat: #fff7ec;
      --paws-plum: #5b3c88;
      --paws-taupe: #9b7e6b;
    }
    body {
      margin: 0;
      font-family: "Inter", sans-serif;
      background: var(--paws-oat);
      color: #333;
    }
    header {
      background: var(--paws-plum);
      color: white;
      padding: 1rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    header a {
      color: white;
      text-decoration: none;
      margin-left: 1rem;
      font-weight: bold;
    }
    .hero {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem 1rem;
      background: linear-gradient(135deg, var(--paws-lilac), var(--paws-oat));
      text-align: center;
    }
    .hero img {
      max-width: 200px;
      border-radius: 50%;
      margin-right: 2rem;
    }
    .hero h1 {
      font-family: "League Spartan", sans-serif;
      font-size: 2.5rem;
      color: var(--paws-plum);
    }
    .about, .philosophy, .resources {
      max-width: 900px;
      margin: 3rem auto;
      padding: 0 1rem;
    }
    h2 {
      font-family: "Cormorant Garamond", serif;
      font-size: 2rem;
      color: var(--paws-plum);
      margin-bottom: 1rem;
    }
    .gallery {
      max-width: 1000px;
      margin: 3rem auto;
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1rem;
      padding: 0 1rem;
    }
    .gallery img {
      width: 100%;
      border-radius: 12px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }
    .cta {
      text-align: center;
      margin: 3rem auto;
    }
    .cta a {
      background: var(--paws-plum);
      color: white;
      padding: 0.75rem 1.5rem;
      border-radius: 30px;
      font-weight: bold;
      text-decoration: none;
      transition: background 0.3s;
    }
    .cta a:hover {
      background: var(--paws-gold);
      color: var(--paws-plum);
    }
    .pill-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
      justify-content: center;
      margin-top: 1rem;
    }
    .pill-buttons a {
      background: var(--paws-lilac);
      color: var(--paws-plum);
      padding: 0.5rem 1rem;
      border-radius: 999px;
      text-decoration: none;
      font-weight: 500;
      transition: background 0.3s;
    }
    .pill-buttons a:hover {
      background: var(--paws-gold);
      color: var(--paws-oat);
    }
    footer {
      background: var(--paws-plum);
      color: white;
      text-align: center;
      padding: 2rem 1rem;
      margin-top: 4rem;
    }
  </style>
</head>
