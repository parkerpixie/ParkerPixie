        box-shadow:0 20px 60px rgba(0,0,0,.35);min-height:280px;transition:transform .12s ease}
      .card:hover{transform:translateY(-1px)}
      .thumb{aspect-ratio:16/9;background:#120d1b;position:relative;overflow:hidden;border-bottom:1px solid rgba(255,255,255,.06)}
      .thumb img{width:100%;height:100%;object-fit:cover;opacity:.95;transition:transform .25s ease}
      .card:hover .thumb img{transform:scale(1.03)}
      .body{padding:16px}
      .title{margin:0 0 6px;font-size:18px;line-height:1.25}
      .meta{color:var(--muted);font-size:13px;margin:0 0 8px}
